@inject IAuthService AuthService
@rendermode InteractiveServer

@if (IsAuthenticated)
{
    <div class="auth-status-logged">
        <div class="user-info">
            <div class="user-avatar">
                <i class="bi bi-person-fill"></i>
            </div>
            <span class="user-name">@UserName</span>
        </div>
        <button class="btn btn-auth-logout" @onclick="Logout">
            <i class="bi bi-box-arrow-right"></i>
        </button>
    </div>
}
else
{
    <div class="auth-status-guest">
        <a href="login" class="btn btn-auth-login">
            Войти
        </a>
        <a href="register" class="btn btn-auth-register">
            Регистрация
        </a>
    </div>
}

<style>
    .auth-status-logged {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--gray-100);
        padding: 0.375rem 0.875rem 0.375rem 0.5rem;
        border-radius: var(--radius-full);
    }

    .user-avatar {
        width: 28px;
        height: 28px;
        background: linear-gradient(135deg, var(--primary-500), var(--accent-purple));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.8rem;
    }

    .user-name {
        font-weight: 500;
        color: var(--gray-700);
        font-size: 0.9rem;
    }

    .btn-auth-logout {
        width: 36px;
        height: 36px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: 1px solid var(--gray-200);
        border-radius: var(--radius);
        color: var(--gray-600);
        cursor: pointer;
        transition: all var(--transition);
    }

    .btn-auth-logout:hover {
        background: var(--accent-red-light);
        border-color: var(--accent-red);
        color: var(--accent-red);
    }

    .auth-status-guest {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-auth-login {
        padding: 0.5rem 1rem;
        background: transparent;
        color: var(--gray-700);
        font-weight: 500;
        font-size: 0.9rem;
        border-radius: var(--radius);
        text-decoration: none;
        transition: all var(--transition);
    }

    .btn-auth-login:hover {
        background: var(--gray-100);
        color: var(--primary-600);
    }

    .btn-auth-register {
        padding: 0.5rem 1.25rem;
        background: linear-gradient(135deg, var(--primary-500), var(--accent-purple));
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: var(--radius-full);
        text-decoration: none;
        transition: all var(--transition);
        box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
    }

    .btn-auth-register:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
        color: white;
    }
</style>

@code {
    private bool IsAuthenticated { get; set; }
    private string UserName { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        var session = await AuthService.GetCurrentSessionAsync();
        IsAuthenticated = session != null;
        UserName = session?.UserName ?? "";
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        IsAuthenticated = false;
        UserName = "";
    }
}
