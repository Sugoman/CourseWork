@inject IAuthService AuthService
@inject IContentApiService ContentApi

<div class="card" style="border-radius: var(--radius-lg);">
    <div class="card-body">
        <h5 class="d-flex align-items-center gap-2 mb-4">
            <i class="bi bi-chat-dots" style="color: var(--primary-500);"></i>
            Отзывы (@(CommentsResult?.TotalCount ?? 0))
        </h5>

        @if (CommentsResult != null && CommentsResult.Items.Any())
        {
            @foreach (var comment in CommentsResult.Items)
            {
                <div class="p-3 mb-3" style="background: var(--gray-50); border-radius: var(--radius);">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="d-flex align-items-center gap-2">
                            <div style="width: 36px; height: 36px; background: linear-gradient(135deg, var(--primary-400), var(--primary-600)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600;">
                                @(comment.AuthorName?.FirstOrDefault() ?? '?')
                            </div>
                            <strong>@comment.AuthorName</strong>
                        </div>
                        <span class="text-muted small">@comment.CreatedAt.ToString("dd.MM.yyyy")</span>
                    </div>
                    <div class="mb-2" style="color: var(--accent-yellow);">
                        @for (int i = 0; i < comment.Rating; i++)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        @for (int i = comment.Rating; i < 5; i++)
                        {
                            <i class="bi bi-star" style="opacity: 0.3;"></i>
                        }
                    </div>
                    <p class="mb-0" style="color: var(--gray-700);">@comment.Text</p>
                </div>
            }

            @if (CommentsResult.TotalPages > 1)
            {
                <nav class="d-flex justify-content-center mt-3">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(CurrentPage <= 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="PreviousPage" disabled="@(CurrentPage <= 1)">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                        </li>
                        @foreach (var pageNum in GetPageWindow())
                        {
                            @if (pageNum == -1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">&hellip;</span>
                                </li>
                            }
                            else
                            {
                                var p = pageNum;
                                <li class="page-item @(p == CurrentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(p)">@p</button>
                                </li>
                            }
                        }
                        <li class="page-item @(CurrentPage >= CommentsResult.TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="NextPage" disabled="@(CurrentPage >= CommentsResult.TotalPages)">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-4 text-muted">
                <i class="bi bi-chat" style="font-size: 2rem; opacity: 0.5;"></i>
                <p class="mt-2 mb-0">Пока нет отзывов. Будьте первым!</p>
            </div>
        }

        <hr style="border-color: var(--gray-200); margin: 1.5rem 0;" />

        @if (IsAuthenticated)
        {
            <h6 class="mb-3">
                <i class="bi bi-pencil me-1"></i> Оставить отзыв
            </h6>

            @if (!string.IsNullOrEmpty(CommentError))
            {
                <div class="alert alert-danger d-flex align-items-center gap-2">
                    <i class="bi bi-exclamation-circle"></i> @CommentError
                </div>
            }
            @if (!string.IsNullOrEmpty(CommentSuccess))
            {
                <div class="alert alert-success d-flex align-items-center gap-2">
                    <i class="bi bi-check-circle"></i> @CommentSuccess
                </div>
            }

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-star me-1"></i> Оценка
                </label>
                <select class="form-select" @bind="NewRating">
                    <option value="5">5 — Отлично</option>
                    <option value="4">4 — Хорошо</option>
                    <option value="3">3 — Нормально</option>
                    <option value="2">2 — Плохо</option>
                    <option value="1">1 — Ужасно</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-chat-text me-1"></i> Комментарий
                </label>
                <textarea class="form-control" rows="3" placeholder="Поделитесь своим мнением..." @bind="NewComment"></textarea>
            </div>
            <button class="btn btn-primary" @onclick="SubmitComment" disabled="@IsSubmitting">
                @if (IsSubmitting)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-send me-1"></i> Отправить
            </button>
        }
        else
        {
            <div class="text-center py-3">
                <p class="text-muted mb-2">Войдите, чтобы оставить отзыв</p>
                <a href="login" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Войти
                </a>
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string EntityType { get; set; } = "";

    [Parameter, EditorRequired]
    public int EntityId { get; set; }

    [Parameter]
    public bool IsAuthenticated { get; set; }

    private PagedResult<CommentItem>? CommentsResult;
    private int CurrentPage = 1;
    private const int PageSize = 5;
    private bool IsSubmitting;
    private int NewRating = 5;
    private string NewComment = "";
    private string? CommentError;
    private string? CommentSuccess;

    private int _previousEntityId;
    private string _previousEntityType = "";

    protected override async Task OnParametersSetAsync()
    {
        if (EntityId != _previousEntityId || EntityType != _previousEntityType)
        {
            _previousEntityId = EntityId;
            _previousEntityType = EntityType;
            CurrentPage = 1;
            await LoadComments();
        }
    }

    private IEnumerable<int> GetPageWindow()
    {
        var total = CommentsResult?.TotalPages ?? 1;
        var current = CurrentPage;
        const int wing = 2;

        var pages = new List<int>();

        pages.Add(1);

        var rangeStart = Math.Max(2, current - wing);
        var rangeEnd = Math.Min(total - 1, current + wing);

        if (rangeStart > 2)
            pages.Add(-1);

        for (int p = rangeStart; p <= rangeEnd; p++)
            pages.Add(p);

        if (rangeEnd < total - 1)
            pages.Add(-1);

        if (total > 1)
            pages.Add(total);

        return pages;
    }

    private async Task LoadComments()
    {
        try
        {
            CommentsResult = EntityType == "dictionary"
                ? await ContentApi.GetDictionaryCommentsAsync(EntityId, CurrentPage, PageSize)
                : await ContentApi.GetRuleCommentsAsync(EntityId, CurrentPage, PageSize);
        }
        catch
        {
            CommentsResult = new PagedResult<CommentItem>();
        }
    }

    private async Task GoToPage(int page)
    {
        CurrentPage = page;
        await LoadComments();
    }

    private async Task PreviousPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
            await LoadComments();
        }
    }

    private async Task NextPage()
    {
        if (CommentsResult != null && CurrentPage < CommentsResult.TotalPages)
        {
            CurrentPage++;
            await LoadComments();
        }
    }

    private async Task SubmitComment()
    {
        CommentError = null;
        CommentSuccess = null;

        if (string.IsNullOrWhiteSpace(NewComment))
        {
            CommentError = "Введите текст комментария";
            return;
        }

        IsSubmitting = true;

        try
        {
            if (EntityType == "dictionary")
                await ContentApi.AddDictionaryCommentAsync(EntityId, NewRating, NewComment);
            else
                await ContentApi.AddRuleCommentAsync(EntityId, NewRating, NewComment);

            CommentSuccess = "Отзыв успешно добавлен!";
            NewComment = "";
            NewRating = 5;
            CurrentPage = 1;
            await LoadComments();
        }
        catch (Exception ex)
        {
            CommentError = $"Ошибка: {ex.Message}";
        }
        finally
        {
            IsSubmitting = false;
        }
    }
}
