@page "/rules"
@using LearningTrainerWeb.Services
@inject IContentApiService ContentApi
@inject ILogger<LearningTrainerWeb.Components.Pages.Rules> Logger

<PageTitle>Правила - LearningTrainer</PageTitle>

<div class="container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="section-heading" style="margin-bottom: 0;">
            <i class="bi bi-journal-text"></i>
            <h1 style="margin-bottom: 0;">Правила</h1>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4" style="border-radius: var(--radius-lg);">
        <div class="card-body p-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label small text-muted">
                        <i class="bi bi-search me-1"></i> Поиск
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Название правила..." 
                               @bind="SearchQuery" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted">
                        <i class="bi bi-tag me-1"></i> Категория
                    </label>
                    <select class="form-select" @bind="SelectedCategory" @bind:after="ApplyFilters">
                        <option value="">Все категории</option>
                        <option value="Grammar">Грамматика</option>
                        <option value="Vocabulary">Лексика</option>
                        <option value="Pronunciation">Произношение</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">
                        <i class="bi bi-bar-chart me-1"></i> Уровень
                    </label>
                    <select class="form-select" @bind="SelectedDifficulty" @bind:after="ApplyFilters">
                        <option value="0">Любой</option>
                        <option value="1">Начальный</option>
                        <option value="2">Средний</option>
                        <option value="3">Продвинутый</option>
                    </select>
                </div>
                <div class="col-md-2" style="margin-top: 32px;">
                    <button class="btn btn-primary w-100 gap-2" @onclick="ApplyFilters">
                        <i class="bi bi-funnel me-1"></i> Найти
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="text-muted mt-3">Загрузка правил...</p>
        </div>
    }
    else if (RuleItems == null || !RuleItems.Any())
    {
        <!-- Улучшенное пустое состояние -->
        <div class="empty-state-card">
            <div class="empty-state-icon">
                <i class="bi bi-journal-text"></i>
            </div>
            <h3>Правила не найдены</h3>
            <p class="text-muted mb-4">
                @if (!string.IsNullOrEmpty(SearchQuery) || !string.IsNullOrEmpty(SelectedCategory) || SelectedDifficulty > 0)
                {
                    <span>По вашему запросу ничего не найдено. Попробуйте изменить параметры поиска.</span>
                }
                else
                {
                    <span>В маркетплейсе пока нет опубликованных правил грамматики.</span>
                }
            </p>
            
            <div class="empty-state-actions">
                @if (!string.IsNullOrEmpty(SearchQuery) || !string.IsNullOrEmpty(SelectedCategory) || SelectedDifficulty > 0)
                {
                    <button class="btn btn-outline-primary" @onclick="ClearFilters">
                        <i class="bi bi-x-circle me-2"></i>Сбросить фильтры
                    </button>
                }
                
                <a href="dictionaries" class="btn btn-primary">
                    <i class="bi bi-book me-2"></i>Перейти к словарям
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var rule in RuleItems)
            {
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@rule.Title</h5>
                                <span class="badge @GetDifficultyBadgeClass(rule.DifficultyLevel)">
                                    @GetDifficultyText(rule.DifficultyLevel)
                                </span>
                            </div>
                            <p class="card-text" style="min-height: 48px;">@rule.Description</p>
                            <div class="d-flex gap-2 mb-3">
                                <span class="badge bg-secondary">@rule.Category</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="d-flex align-items-center gap-2" style="color: var(--accent-yellow);">
                                    <i class="bi bi-star-fill"></i> 
                                    <strong>@rule.Rating.ToString("F1")</strong>
                                </span>
                                <div class="d-flex gap-2">
                                    <a href="rule/@rule.Id" class="btn btn-sm btn-outline-primary gap-2">
                                        <i class="bi bi-book-half me-1"></i> Читать
                                    </a>
                                    <button class="btn btn-sm btn-success" @onclick="() => DownloadRule(rule.Id)">
                                        <i class="bi bi-download"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 pb-3">
                            <div class="d-flex justify-content-between align-items-center text-muted" style="font-size: 0.85rem;">

                                <div class="d-flex align-items-center gap-2" style="min-width: 0; flex: 1;">
                                    <i class="bi bi-person-circle"></i>
                                    <span class="text-truncate">@rule.AuthorName</span>
                                </div>

                                <div class="d-flex align-items-center gap-3 ms-2">
                                    <span class="d-flex align-items-center gap-2">
                                        <i class="bi bi-calendar3 gap-2" ></i>
                                        <span>@rule.CreatedAt.ToString("dd.MM")</span>
                                    </span>
                                    <span class="d-flex align-items-center gap-2">
                                        <i class="bi bi-download"></i>
                                        @rule.Downloads
                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (TotalPages > 1)
        {
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => LoadPage(CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                    </li>
                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(pageNum == CurrentPage ? "active" : "")">
                            <button class="page-link" @onclick="() => LoadPage(pageNum)">@pageNum</button>
                        </li>
                    }
                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => LoadPage(CurrentPage + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@code {
    private List<RuleListItem>? RuleItems;
    private bool IsLoading = true;
    private string SearchQuery = "";
    private string SelectedCategory = "";
    private int SelectedDifficulty = 0;
    private int CurrentPage = 1;
    private int TotalPages = 1;
    private const int PageSize = 8;

    protected override async Task OnInitializedAsync()
    {
        await LoadRules();
    }

    private async Task LoadRules()
    {
        IsLoading = true;
        try
        {
            var result = await ContentApi.GetPublicRulesAsync(
                SearchQuery, SelectedCategory, SelectedDifficulty, CurrentPage, PageSize);
            RuleItems = result.Items;
            TotalPages = result.TotalPages;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading rules");
            RuleItems = new List<RuleListItem>();
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await ApplyFilters();
        }
    }

    private async Task ApplyFilters()
    {
        CurrentPage = 1;
        await LoadRules();
    }

    private async Task ClearFilters()
    {
        SearchQuery = "";
        SelectedCategory = "";
        SelectedDifficulty = 0;
        CurrentPage = 1;
        await LoadRules();
    }

    private async Task LoadPage(int page)
    {
        if (page < 1 || page > TotalPages) return;
        CurrentPage = page;
        await LoadRules();
    }

    private async Task DownloadRule(int ruleId)
    {
        try
        {
            await ContentApi.DownloadRuleAsync(ruleId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error downloading rule {RuleId}", ruleId);
        }
    }

    private string GetDifficultyBadgeClass(int level) => level switch
    {
        1 => "bg-success",
        2 => "bg-warning text-dark",
        3 => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetDifficultyText(int level) => level switch
    {
        1 => "Начальный",
        2 => "Средний",
        3 => "Продвинутый",
        _ => "Неизвестно"
    };
}
