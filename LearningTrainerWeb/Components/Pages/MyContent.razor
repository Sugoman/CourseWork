@page "/my-content"
@inject IContentApiService ContentApi
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Мой контент - LearningTrainer</PageTitle>

<div class="container">
    @if (!IsAuthenticated)
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; margin-bottom: 1rem; color: var(--primary-400);"><i class="bi bi-lock"></i></div>
            <h2>Требуется авторизация</h2>
            <p class="text-muted mb-4">Войдите, чтобы управлять своим контентом</p>
            <a href="login" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i> Войти
            </a>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4">
            <div class="section-heading" style="margin-bottom: 0;">
                <i class="bi bi-folder2-open"></i>
                <h1 style="margin-bottom: 0;">Мой контент</h1>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary gap-2" @onclick="ExportAllDictionaries" disabled="@IsExporting">
                    @if (IsExporting)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    else
                    {
                        <i class="bi bi-file-earmark-zip me-1"></i>
                    }
                    Экспорт всех
                </button>
                <button class="btn btn-success gap-2" @onclick="ShowPublishDictionaryModal">
                    <i class="bi bi-plus-circle me-1"></i> Словарь
                </button>
                <button class="btn btn-success gap-2" @onclick="ShowPublishRuleModal">
                    <i class="bi bi-plus-circle me-1"></i> Правило
                </button>
            </div>
        </div>

        <!-- Tabs -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <button class="nav-link  @(ActiveTab == "dictionaries" ? "active" : "")" 
                        @onclick="@(() => ActiveTab = "dictionaries")">
                    <i class="bi bi-book me-1"></i> Мои словари
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(ActiveTab == "rules" ? "active" : "")" 
                        @onclick="@(() => ActiveTab = "rules")">
                    <i class="bi bi-journal-text me-1"></i> Мои правила
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(ActiveTab == "downloaded" ? "active" : "")" 
                        @onclick="@(() => ActiveTab = "downloaded")">
                    <i class="bi bi-download me-1"></i> Скачанное
                </button>
            </li>
        </ul>

        @if (ActiveTab == "dictionaries")
        {
            <div class="row g-4">
                @if (MyDictionaries != null && MyDictionaries.Any())
                {
                    @foreach (var dict in MyDictionaries)
                    {
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">@dict.Name</h5>
                                        <span class="badge @(dict.IsPublished ? "bg-success" : "bg-secondary")">
                                            @(dict.IsPublished ? "✔ Опубликован" : "Черновик")
                                        </span>
                                    </div>
                                    <p class="text-muted small mb-3">
                                        <i class="bi bi-collection me-1"></i> @dict.WordCount слов
                                    </p>
                                    <div class="d-flex gap-2 flex-wrap">
                                        @if (!dict.IsPublished)
                                        {
                                            <button class="btn btn-sm btn-primary gap-2" @onclick="() => PublishDictionary(dict.Id)">
                                                <i class="bi bi-cloud-upload me-1"></i> Опубликовать
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-danger gap-2" @onclick="() => UnpublishDictionary(dict.Id)">
                                                <i class="bi bi-x-circle me-1"></i> Снять
                                            </button>
                                        }
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-download me-1"></i> Экспорт
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><button class="dropdown-item" @onclick="() => ExportDictionaryAsJson(dict.Id, dict.Name)"><i class="bi bi-filetype-json me-2"></i>JSON</button></li>
                                                <li><button class="dropdown-item" @onclick="() => ExportDictionaryAsCsv(dict.Id, dict.Name)"><i class="bi bi-filetype-csv me-2"></i>CSV</button></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between align-items-center text-muted small">
                                        <span>
                                            <i class="bi bi-star-fill me-1" style="color: var(--accent-yellow);"></i>
                                            @dict.Rating.ToString("F1")
                                        </span>
                                        <span>
                                            <i class="bi bi-download me-1"></i>
                                            @dict.Downloads
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <div style="font-size: 3rem; margin-bottom: 1rem; color: var(--primary-400);"><i class="bi bi-book"></i></div>
                            <p class="text-muted">У вас пока нет словарей</p>
                            <button class="btn btn-primary" @onclick="ShowPublishDictionaryModal">
                                <i class="bi bi-plus-circle me-1"></i> Создать словарь
                            </button>
                        </div>
                    </div>
                }
            </div>
        }

        @if (ActiveTab == "rules")
        {
            <div class="row g-4">
                @if (MyRules != null && MyRules.Any())
                {
                    @foreach (var rule in MyRules)
                    {
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">@rule.Title</h5>
                                        <span class="badge @(rule.IsPublished ? "bg-success" : "bg-secondary")">
                                            @(rule.IsPublished ? "? Опубликовано" : "Черновик")
                                        </span>
                                    </div>
                                    <span class="badge bg-info mb-3">@rule.Category</span>
                                    <div class="d-flex gap-2">
                                        @if (!rule.IsPublished)
                                        {
                                            <button class="btn btn-sm btn-primary" @onclick="() => PublishRule(rule.Id)">
                                                <i class="bi bi-cloud-upload me-1"></i> Опубликовать
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => UnpublishRule(rule.Id)">
                                                <i class="bi bi-x-circle me-1"></i> Снять
                                            </button>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between align-items-center text-muted small">
                                        <span>
                                            <i class="bi bi-star-fill me-1" style="color: var(--accent-yellow);"></i>
                                            @rule.Rating.ToString("F1")
                                        </span>
                                        <span>
                                            <i class="bi bi-download me-1"></i>
                                            @rule.Downloads
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <div style="font-size: 3rem; margin-bottom: 1rem; color: var(--primary-400);"><i class="bi bi-journal-text"></i></div>
                            <p class="text-muted">У вас пока нет правил</p>
                            <button class="btn btn-primary" @onclick="ShowPublishRuleModal">
                                <i class="bi bi-plus-circle me-1"></i> Создать правило
                            </button>
                        </div>
                    </div>
                }
            </div>
        }

        @if (ActiveTab == "downloaded")
        {
            <div class="row g-4">
                @if (DownloadedContent != null && DownloadedContent.Any())
                {
                    @foreach (var item in DownloadedContent)
                    {
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <span class="badge @(item.Type == "Словарь" ? "bg-info" : "bg-warning") mb-2">@item.Type</span>
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-person-circle me-1"></i> @item.AuthorName
                                    </p>
                                </div>
                                <div class="card-footer text-muted small">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    Скачано: @item.DownloadedAt.ToString("dd.MM.yyyy")
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <div style="font-size: 3rem; margin-bottom: 1rem; color: var(--primary-400);"><i class="bi bi-download"></i></div>
                            <p class="text-muted">Вы ещё ничего не скачивали</p>
                            <a href="dictionaries" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i> Найти контент
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@if (!string.IsNullOrEmpty(ExportMessage))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div class="d-flex align-items-center gap-2 px-4 py-3 text-white" 
             style="background: @(ExportSuccess ? "var(--accent-green)" : "var(--accent-red)"); border-radius: var(--radius); box-shadow: var(--shadow-lg);">
            <i class="bi @(ExportSuccess ? "bi-check-circle" : "bi-exclamation-circle")"></i>
            @ExportMessage
            <button type="button" class="btn-close btn-close-white ms-2" @onclick="() => ExportMessage = null" style="font-size: 0.75rem;"></button>
        </div>
    </div>
}

@code {
    private bool IsAuthenticated = false;
    private bool IsExporting = false;
    private string ActiveTab = "dictionaries";
    private string? ExportMessage;
    private bool ExportSuccess;

    private List<MyDictionaryItem>? MyDictionaries;
    private List<MyRuleItem>? MyRules;
    private List<DownloadedItem>? DownloadedContent;

    protected override async Task OnInitializedAsync()
    {
        var session = await AuthService.GetCurrentSessionAsync();
        IsAuthenticated = session != null;

        if (IsAuthenticated)
        {
            await LoadMyContent();
        }
    }

    private async Task LoadMyContent()
    {
        try
        {
            MyDictionaries = await ContentApi.GetMyDictionariesAsync();
            MyRules = await ContentApi.GetMyRulesAsync();
            DownloadedContent = await ContentApi.GetDownloadedContentAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void ShowPublishDictionaryModal()
    {
        // TODO: Implement modal
    }

    private void ShowPublishRuleModal()
    {
        // TODO: Implement modal
    }

    private async Task PublishDictionary(int id)
    {
        await ContentApi.PublishDictionaryAsync(id);
        await LoadMyContent();
    }

    private async Task UnpublishDictionary(int id)
    {
        await ContentApi.UnpublishDictionaryAsync(id);
        await LoadMyContent();
    }

    private async Task PublishRule(int id)
    {
        await ContentApi.PublishRuleAsync(id);
        await LoadMyContent();
    }

    private async Task UnpublishRule(int id)
    {
        await ContentApi.UnpublishRuleAsync(id);
        await LoadMyContent();
    }

    private async Task ExportDictionaryAsJson(int dictionaryId, string name)
    {
        try
        {
            var result = await ContentApi.ExportDictionaryAsJsonAsync(dictionaryId);
            await DownloadFile(result.Data, result.FileName, result.ContentType);
            ExportMessage = $"Словарь '{name}' успешно экспортирован!";
            ExportSuccess = true;
        }
        catch (Exception ex)
        {
            ExportMessage = $"Ошибка экспорта: {ex.Message}";
            ExportSuccess = false;
        }
        StateHasChanged();
        await Task.Delay(3000);
        ExportMessage = null;
        StateHasChanged();
    }

    private async Task ExportDictionaryAsCsv(int dictionaryId, string name)
    {
        try
        {
            var result = await ContentApi.ExportDictionaryAsCsvAsync(dictionaryId);
            await DownloadFile(result.Data, result.FileName, result.ContentType);
            ExportMessage = $"Словарь '{name}' успешно экспортирован!";
            ExportSuccess = true;
        }
        catch (Exception ex)
        {
            ExportMessage = $"Ошибка экспорта: {ex.Message}";
            ExportSuccess = false;
        }
        StateHasChanged();
        await Task.Delay(3000);
        ExportMessage = null;
        StateHasChanged();
    }

    private async Task ExportAllDictionaries()
    {
        IsExporting = true;
        StateHasChanged();

        try
        {
            var result = await ContentApi.ExportAllDictionariesAsZipAsync();
            await DownloadFile(result.Data, result.FileName, result.ContentType);
            ExportMessage = "Все словари успешно экспортированы!";
            ExportSuccess = true;
        }
        catch (Exception ex)
        {
            ExportMessage = $"Ошибка экспорта: {ex.Message}";
            ExportSuccess = false;
        }
        finally
        {
            IsExporting = false;
        }

        StateHasChanged();
        await Task.Delay(3000);
        ExportMessage = null;
        StateHasChanged();
    }

    private async Task DownloadFile(byte[] data, string fileName, string contentType)
    {
        var base64 = Convert.ToBase64String(data);
        await JS.InvokeVoidAsync("downloadFile", fileName, contentType, base64);
    }
}
