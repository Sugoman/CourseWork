@page "/rule/{Id:int}"
@inject IContentApiService ContentApi
@rendermode InteractiveServer

<PageTitle>@(Rule?.Title ?? "Правило") - LearningTrainer</PageTitle>

<div class="container">
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
        </div>
    }
    else if (Rule == null)
    {
        <div class="alert alert-danger">Правило не найдено</div>
    }
    else
    {
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="rules">Правила</a></li>
                <li class="breadcrumb-item active">@Rule.Title</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h1>@Rule.Title</h1>
                                <div class="d-flex gap-2 mb-2">
                                    <span class="badge bg-secondary">@Rule.Category</span>
                                    <span class="badge @GetDifficultyBadgeClass(Rule.DifficultyLevel)">
                                        @GetDifficultyText(Rule.DifficultyLevel)
                                    </span>
                                </div>
                                <p class="text-muted">@Rule.Description</p>
                            </div>
                            <button class="btn btn-success btn-lg" @onclick="DownloadRule">
                                ?? Скачать
                            </button>
                        </div>
                        
                        <div class="d-flex gap-3 mt-3">
                            <span class="text-warning fs-5">? @Rule.Rating.ToString("F1") (@Rule.RatingCount оценок)</span>
                            <span class="text-muted">@Rule.Downloads скачиваний</span>
                        </div>
                    </div>
                </div>

                <!-- Содержимое правила в Markdown -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Содержание</h5>
                    </div>
                    <div class="card-body">
                        <div class="markdown-content">
                            @((MarkupString)Rule.HtmlContent)
                        </div>
                    </div>
                </div>

                <!-- Комментарии -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Отзывы (@(Comments?.Count ?? 0))</h5>
                    </div>
                    <div class="card-body">
                        @if (Comments != null && Comments.Any())
                        {
                            @foreach (var comment in Comments)
                            {
                                <div class="border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between">
                                        <strong>@comment.AuthorName</strong>
                                        <span class="text-muted small">@comment.CreatedAt.ToString("dd.MM.yyyy")</span>
                                    </div>
                                    <div class="text-warning mb-2">
                                        @for (int i = 0; i < comment.Rating; i++)
                                        {
                                            <span>?</span>
                                        }
                                    </div>
                                    <p class="mb-0">@comment.Text</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Пока нет отзывов</p>
                        }

                        <hr />
                        <h6>Оставить отзыв</h6>
                        <div class="mb-3">
                            <label class="form-label">Оценка</label>
                            <select class="form-select" @bind="NewRating">
                                <option value="5">????? Отлично</option>
                                <option value="4">???? Хорошо</option>
                                <option value="3">??? Нормально</option>
                                <option value="2">?? Плохо</option>
                                <option value="1">? Ужасно</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="3" placeholder="Ваш комментарий..." @bind="NewComment"></textarea>
                        </div>
                        <button class="btn btn-primary" @onclick="SubmitComment">Отправить</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Об авторе</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            @Rule.AuthorName[0]
                        </div>
                        <h5>@Rule.AuthorName</h5>
                        <p class="text-muted small">Опубликованных материалов: @Rule.AuthorContentCount</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Похожие правила</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @if (RelatedRules != null)
                        {
                            @foreach (var related in RelatedRules)
                            {
                                <li class="list-group-item">
                                    <a href="rule/@related.Id">@related.Title</a>
                                    <span class="text-warning float-end">? @related.Rating.ToString("F1")</span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private RuleDetailDto? Rule;
    private List<CommentItem>? Comments;
    private List<RuleListItem>? RelatedRules;
    private bool IsLoading = true;

    private int NewRating = 5;
    private string NewComment = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadRule();
    }

    private async Task LoadRule()
    {
        IsLoading = true;
        try
        {
            Rule = await ContentApi.GetRuleDetailsAsync(Id);
            Comments = await ContentApi.GetRuleCommentsAsync(Id);
            if (Rule != null)
            {
                RelatedRules = await ContentApi.GetRelatedRulesAsync(Id, Rule.Category);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task DownloadRule()
    {
        try
        {
            await ContentApi.DownloadRuleAsync(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Download error: {ex.Message}");
        }
    }

    private async Task SubmitComment()
    {
        if (string.IsNullOrWhiteSpace(NewComment)) return;
        
        try
        {
            await ContentApi.AddRuleCommentAsync(Id, NewRating, NewComment);
            NewComment = "";
            await LoadRule();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private string GetDifficultyBadgeClass(int level) => level switch
    {
        1 => "bg-success",
        2 => "bg-warning text-dark",
        3 => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetDifficultyText(int level) => level switch
    {
        1 => "Начальный",
        2 => "Средний",
        3 => "Продвинутый",
        _ => "Неизвестно"
    };
}
