@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@using LearningTrainerShared.Services

<PageTitle>Регистрация - Ingat</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4">
                <div style="font-size: 3rem; margin-bottom: 0.5rem; color: var(--primary-500);"><i class="bi bi-person-plus-fill"></i></div>
                <h1 class="h2">Создайте аккаунт</h1>
                Присоединяйтесь к сообществу Ingat
            </div>

            <div class="card" style="border-radius: var(--radius-xl);">
                <div class="card-body p-4 p-md-5">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger d-flex align-items-center gap-2">
                            <i class="bi bi-exclamation-circle"></i>
                            @ErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success d-flex align-items-center gap-2">
                            <i class="bi bi-check-circle"></i>
                            @SuccessMessage
                        </div>
                    }

                    <EditForm Model="RegisterModel" OnValidSubmit="HandleRegister" FormName="RegisterForm">
                        <DataAnnotationsValidator />

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-person me-1"></i> Имя пользователя
                            </label>
                            <InputText @bind-Value="RegisterModel.Username" class="form-control form-control-lg" placeholder="username" />
                            <ValidationMessage For="() => RegisterModel.Username" class="text-danger small mt-1" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-envelope me-1"></i> Email
                            </label>
                            <InputText @bind-Value="RegisterModel.Email" class="form-control form-control-lg" placeholder="user@example.com" />
                            <ValidationMessage For="() => RegisterModel.Email" class="text-danger small mt-1" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-lock me-1"></i> Пароль
                            </label>
                            <InputText @bind-Value="RegisterModel.Password" @bind-Value:after="OnPasswordChanged" type="password" class="form-control form-control-lg" />
                            <ValidationMessage For="() => RegisterModel.Password" class="text-danger small mt-1" />
                        </div>

                        @* Password strength indicator *@
                        @if (!string.IsNullOrEmpty(RegisterModel.Password))
                        {
                            <div class="mb-4">
                                <div class="d-flex gap-1 mb-1">
                                    @for (int i = 0; i < 4; i++)
                                    {
                                        var idx = i;
                                        <div class="flex-fill rounded-pill" style="height: 4px; background-color: @(idx < (int)_passwordStrength ? GetStrengthColor(_passwordStrength) : "#e5e7eb");"></div>
                                    }
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small style="color: @GetStrengthColor(_passwordStrength);">
                                        <i class="bi @GetStrengthIcon(_passwordStrength) me-1"></i>@GetStrengthLabel(_passwordStrength)
                                    </small>
                                    <small class="text-muted">@RegisterModel.Password.Length / @PasswordValidator.MinLength+ символов</small>
                                </div>

                                @* Password requirement checklist *@
                                <div class="mt-2">
                                    <small class="d-block @(_hasMinLength ? "text-success" : "text-muted")">
                                        <i class="bi @(_hasMinLength ? "bi-check-circle-fill" : "bi-circle") me-1"></i>
                                        Минимум @PasswordValidator.MinLength символов
                                    </small>
                                    <small class="d-block @(_hasLetter ? "text-success" : "text-muted")">
                                        <i class="bi @(_hasLetter ? "bi-check-circle-fill" : "bi-circle") me-1"></i>
                                        Хотя бы одна буква
                                    </small>
                                    <small class="d-block @(_hasDigit ? "text-success" : "text-muted")">
                                        <i class="bi @(_hasDigit ? "bi-check-circle-fill" : "bi-circle") me-1"></i>
                                        Хотя бы одна цифра
                                    </small>
                                </div>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-lock-fill me-1"></i> Подтверждение пароля
                            </label>
                            <InputText @bind-Value="RegisterModel.ConfirmPassword" type="password" class="form-control form-control-lg" />
                            <ValidationMessage For="() => RegisterModel.ConfirmPassword" class="text-danger small mt-1" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-ticket-perforated me-1"></i> Код приглашения
                                <span class="text-muted fw-normal">(необязательно)</span>
                            </label>
                            <InputText @bind-Value="RegisterModel.InviteCode" class="form-control" placeholder="XXXXXX" />
                            <small class="text-muted">Если у вас есть код от учителя</small>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100" disabled="@IsLoading">
                            @if (IsLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-person-plus me-2"></i>Зарегистрироваться
                        </button>
                    </EditForm>

                    <div class="text-center mt-4 pt-4" style="border-top: 1px solid var(--gray-200);">
                        <p class="text-muted mb-0">
                            Уже есть аккаунт? 
                            <a href="login" class="fw-semibold">Войти</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private RegisterFormModel RegisterModel { get; set; } = new();

    private bool IsLoading = false;
    private string? ErrorMessage;
    private string? SuccessMessage;

    // Password strength state
    private PasswordStrength _passwordStrength;
    private bool _hasMinLength;
    private bool _hasLetter;
    private bool _hasDigit;

    private void OnPasswordChanged()
    {
        var pwd = RegisterModel.Password ?? "";
        _passwordStrength = PasswordValidator.GetStrength(pwd);
        _hasMinLength = pwd.Length >= PasswordValidator.MinLength;
        _hasLetter = System.Text.RegularExpressions.Regex.IsMatch(pwd, @"[a-zA-Zа-яА-ЯёЁ]");
        _hasDigit = System.Text.RegularExpressions.Regex.IsMatch(pwd, @"[0-9]");
    }

    private async Task HandleRegister()
    {
        // Password strength check (server also validates via FluentValidation)
        var passwordErrors = PasswordValidator.Validate(RegisterModel.Password);
        if (passwordErrors.Count > 0)
        {
            ErrorMessage = string.Join(". ", passwordErrors);
            return;
        }

        if (RegisterModel.Password != RegisterModel.ConfirmPassword)
        {
            ErrorMessage = "Пароли не совпадают";
            return;
        }

        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var success = await AuthService.RegisterAsync(
                RegisterModel.Username, 
                RegisterModel.Email, 
                RegisterModel.Password,
                RegisterModel.InviteCode);

            if (success)
            {
                SuccessMessage = "Регистрация успешна! Теперь вы можете войти.";
                RegisterModel = new();
                _passwordStrength = PasswordStrength.VeryWeak;
            }
            else
            {
                ErrorMessage = "Ошибка регистрации. Попробуйте другое имя пользователя.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private static string GetStrengthColor(PasswordStrength strength) => strength switch
    {
        PasswordStrength.VeryWeak => "#ef4444",
        PasswordStrength.Weak => "#f97316",
        PasswordStrength.Fair => "#eab308",
        PasswordStrength.Good => "#22c55e",
        PasswordStrength.Strong => "#10b981",
        _ => "#9ca3af"
    };

    private static string GetStrengthLabel(PasswordStrength strength) => strength switch
    {
        PasswordStrength.VeryWeak => "Очень слабый",
        PasswordStrength.Weak => "Слабый",
        PasswordStrength.Fair => "Средний",
        PasswordStrength.Good => "Хороший",
        PasswordStrength.Strong => "Отличный",
        _ => ""
    };

    private static string GetStrengthIcon(PasswordStrength strength) => strength switch
    {
        PasswordStrength.VeryWeak or PasswordStrength.Weak => "bi-shield-exclamation",
        PasswordStrength.Fair => "bi-shield",
        PasswordStrength.Good or PasswordStrength.Strong => "bi-shield-check",
        _ => "bi-shield"
    };

    private class RegisterFormModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Введите имя пользователя")]
        [System.ComponentModel.DataAnnotations.MinLength(3, ErrorMessage = "Минимум 3 символа")]
        [System.ComponentModel.DataAnnotations.MaxLength(50, ErrorMessage = "Максимум 50 символов")]
        [System.ComponentModel.DataAnnotations.RegularExpression(@"^[a-zA-Z0-9_]+$", ErrorMessage = "Только буквы, цифры и _")]
        public string Username { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Введите email")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Неверный формат email")]
        public string Email { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Введите пароль")]
        [System.ComponentModel.DataAnnotations.MinLength(8, ErrorMessage = "Минимум 8 символов")]
        [System.ComponentModel.DataAnnotations.MaxLength(128, ErrorMessage = "Максимум 128 символов")]
        [System.ComponentModel.DataAnnotations.RegularExpression(@"^(?=.*[a-zA-Zа-яА-ЯёЁ])(?=.*[0-9]).+$",
            ErrorMessage = "Пароль должен содержать буквы и цифры")]
        public string Password { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Подтвердите пароль")]
        [System.ComponentModel.DataAnnotations.Compare(nameof(Password), ErrorMessage = "Пароли не совпадают")]
        public string ConfirmPassword { get; set; } = "";

        public string? InviteCode { get; set; }
    }
}
