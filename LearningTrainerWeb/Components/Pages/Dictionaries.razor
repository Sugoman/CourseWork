@page "/dictionaries"
@inject IContentApiService ContentApi
@rendermode InteractiveServer

<PageTitle>Словари - LearningTrainer</PageTitle>

<div class="container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="section-heading" style="margin-bottom: 0;">
            <i class="bi bi-book"></i>
            <h1 style="margin-bottom: 0;">Словари</h1>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4" style="border-radius: var(--radius-lg);">
        <div class="card-body p-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small text-muted">
                        <i class="bi bi-search me-1"></i> Поиск
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Название словаря..." 
                               @bind="SearchQuery" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted">
                        <i class="bi bi-translate me-1"></i> Язык оригинала
                    </label>
                    <select class="form-select" @bind="SelectedLanguageFrom">
                        <option value="">Все языки</option>
                        <option value="en">???? English</option>
                        <option value="ru">???? Русский</option>
                        <option value="de">???? Deutsch</option>
                        <option value="es">???? Espa?ol</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted">
                        <i class="bi bi-arrow-right-circle me-1"></i> Язык перевода
                    </label>
                    <select class="form-select" @bind="SelectedLanguageTo">
                        <option value="">Все языки</option>
                        <option value="en">???? English</option>
                        <option value="ru">???? Русский</option>
                        <option value="de">???? Deutsch</option>
                        <option value="es">???? Espa?ol</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" @onclick="ApplyFilters">
                        <i class="bi bi-funnel me-1"></i> Найти
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="text-muted mt-3">Загрузка словарей...</p>
        </div>
    }
    else if (DictionaryItems == null || !DictionaryItems.Any())
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; margin-bottom: 1rem; color: var(--primary-400);"><i class="bi bi-book"></i></div>
            <h3>Словари не найдены</h3>
            <p class="text-muted">Попробуйте изменить параметры поиска</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var dict in DictionaryItems)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@dict.Name</h5>
                                <span class="badge bg-info">@dict.WordCount слов</span>
                            </div>
                            <p class="card-text" style="min-height: 48px;">@dict.Description</p>
                            <div class="d-flex gap-2 mb-3">
                                <span class="badge bg-secondary">@dict.LanguageFrom</span>
                                <span style="color: var(--gray-400);"><i class="bi bi-arrow-right"></i></span>
                                <span class="badge bg-secondary">@dict.LanguageTo</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="d-flex align-items-center gap-1" style="color: var(--accent-yellow);">
                                    <i class="bi bi-star-fill"></i> 
                                    <strong>@dict.Rating.ToString("F1")</strong>
                                </span>
                                <div class="d-flex gap-2">
                                    <a href="dictionary/@dict.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-success" @onclick="() => DownloadDictionary(dict.Id)">
                                        <i class="bi bi-download"></i> Скачать
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex align-items-center gap-2 text-muted small">
                                <i class="bi bi-person-circle"></i>
                                <span>@dict.AuthorName</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (TotalPages > 1)
        {
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => LoadPage(CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                    </li>
                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(pageNum == CurrentPage ? "active" : "")">
                            <button class="page-link" @onclick="() => LoadPage(pageNum)">@pageNum</button>
                        </li>
                    }
                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => LoadPage(CurrentPage + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@code {
    private List<DictionaryListItem>? DictionaryItems;
    private bool IsLoading = true;
    private string SearchQuery = "";
    private string SelectedLanguageFrom = "";
    private string SelectedLanguageTo = "";
    private int CurrentPage = 1;
    private int TotalPages = 1;
    private const int PageSize = 9;

    protected override async Task OnInitializedAsync()
    {
        await LoadDictionaries();
    }

    private async Task LoadDictionaries()
    {
        IsLoading = true;
        try
        {
            var result = await ContentApi.GetPublicDictionariesAsync(
                SearchQuery, SelectedLanguageFrom, SelectedLanguageTo, CurrentPage, PageSize);
            DictionaryItems = result.Items;
            TotalPages = result.TotalPages;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dictionaries: {ex.Message}");
            DictionaryItems = new List<DictionaryListItem>();
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await ApplyFilters();
        }
    }

    private async Task ApplyFilters()
    {
        CurrentPage = 1;
        await LoadDictionaries();
    }

    private async Task LoadPage(int page)
    {
        if (page < 1 || page > TotalPages) return;
        CurrentPage = page;
        await LoadDictionaries();
    }

    private async Task DownloadDictionary(int dictionaryId)
    {
        try
        {
            await ContentApi.DownloadDictionaryAsync(dictionaryId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Download error: {ex.Message}");
        }
    }
}
