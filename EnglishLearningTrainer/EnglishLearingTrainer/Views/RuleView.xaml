<UserControl x:Class="LearningTrainer.Views.RuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:behaviors="clr-namespace:LearningTrainer.Behaviors" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Background="Transparent"
                   Text="{Binding Rule.Title}" 
                   FontSize="{DynamicResource HeaderFontSize}"
                   FontWeight="Bold" 
                   Foreground="#00b8d4" 
                   TextWrapping="Wrap"
                   Margin="30,30,30,15"/>

        <Border Grid.Row="1" BorderBrush="#00b8d4" BorderThickness="0,1,0,0" Opacity="0.3" Margin="30,0"/>

        <wv2:WebView2 Grid.Row="1" 
                      DefaultBackgroundColor="Transparent"
                      Margin="0,20,0,0"
                      behaviors:WebBrowserBehavior.Markdown="{Binding Rule.MarkdownContent}"
    behaviors:WebBrowserBehavior.Config="{Binding Config}"/>
    </Grid>
</UserControl>