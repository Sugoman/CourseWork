<UserControl x:Class="LearningTrainer.Views.RuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningTrainer.Views"
             xmlns:md="https://github.com/whistyun/MdXaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="{Binding Rule.Title}" 
                       FontSize="{DynamicResource HeaderFontSize}"
                       FontWeight="Bold" 
                       Foreground="#2c3e50" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,35"/>

            <Border BorderBrush="#ecf0f1" BorderThickness="0,1,0,0" Padding="0,20,0,0">
                <md:MarkdownScrollViewer Markdown="{Binding Rule.MarkdownContent}"
                                         FontSize="{DynamicResource BaseFontSize}"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="10"/>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>