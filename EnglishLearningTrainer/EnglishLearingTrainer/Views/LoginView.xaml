<UserControl x:Class="EnglishLearningTrainer.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishLearningTrainer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" CornerRadius="10" Padding="40" MinWidth="350">
            <Border.Effect>
                <DropShadowEffect Color="LightGray" ShadowDepth="2" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Вход в систему" 
                           FontSize="{DynamicResource HeaderFontSize}"
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" FontSize="{DynamicResource BaseFontSize}" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="{DynamicResource BaseFontSize}" 
                         Padding="5"/>

                <TextBlock Text="Пароль:"
                           FontSize="{DynamicResource BaseFontSize}"
                           Margin="0,10,0,5"/>
                <PasswordBox x:Name="MyPasswordBox" 
                             FontSize="{DynamicResource BaseFontSize}"
                             Padding="5"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           Margin="0,10,0,0" 
                           HorizontalAlignment="Center"/>

                <Button Command="{Binding LoginCommand}" 
                        Content="Войти" Margin="0,20,0,0"
                        Padding="10,5" 
                        Cursor="Hand" 
                        Style="{StaticResource PrimaryButton}">
                    <Button.CommandParameter>
                        <Binding ElementName="MyPasswordBox"/>
                    </Button.CommandParameter>
                </Button>
                
                <Button Command="{Binding OfflineLoginCommand}" 
                    Content="Автономный режим" 
                    Style="{StaticResource BaseButton}" 
                    Margin="0,10,0,0" />
                        
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
