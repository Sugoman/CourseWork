<UserControl x:Class="LearningTrainer.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningTrainer.Views"
             xmlns:behaviors="clr-namespace:LearningTrainer.Behaviors"       
             xmlns:svg="clr-namespace:SharpVectors.Converters;assembly=SharpVectors.Converters.Wpf"
             xmlns:converters="clr-namespace:LearningTrainer.Converters" 
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="500"
             Background="{DynamicResource MainBackgroundBrush}">
    <UserControl.Resources>
        <converters:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />


        <!-- Стиль для табов Login/Register -->
        <Style x:Key="SegmentButton" TargetType="RadioButton">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <!-- light gray -->
            <Setter Property="Foreground" Value="{DynamicResource TertiaryTextBrush}"/>
            <!-- gray -->
            <Setter Property="BorderThickness" Value="1,1,1,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Базовое состояние "Выбрано" -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <!-- blue -->
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
                <!-- Наведение мыши, когда НЕ выбрано -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                    <!-- lighter gray -->
                </Trigger>
                <!-- Наведение мыши, когда ВЫБРАНО -->
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsChecked" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#2563EB"/>
                    <!-- darker blue -->
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для основной кнопки (Login/Create Account) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
    </UserControl.Resources>

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">

                <!-- Заголовок -->
                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{DynamicResource Loc.Login.Title}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRegisterMode}" Value="True">
                                    <Setter Property="Text" Value="{DynamicResource Loc.Login.CreateAccountButton}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Поле Email/Login -->
                <Label Content="{DynamicResource Loc.Login.EmailPlaceholder}" Foreground="{DynamicResource SecondaryTextBrush}" FontWeight="Medium" Margin="0,10,0,5"/>
                <Grid>
                    <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Width="20" Height="20" Margin="10 0 10 0" Fill="{DynamicResource PrimaryTextBrush}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform">
                                    <VisualBrush.Visual>
                                        <svg:SvgViewbox Source="Sources/email.svg"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBox x:Name="UsernameTextBox" 
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="8,12" 
                                 VerticalContentAlignment="Center" 
                                 Width="320" 
                                 Grid.Column="1"
                                 FontSize="14"/>
                    </Grid>
                    <!-- Плейсхолдер -->
                    <TextBlock Text="your@email.com" Foreground="{DynamicResource TertiaryTextBrush}" VerticalAlignment="Center" 
                               Margin="50,0,0,0" IsHitTestVisible="False"
                               Visibility="{Binding Text, ElementName=UsernameTextBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                </Grid>

                <!-- Поле Password -->
                <Label Content="{DynamicResource Loc.Login.PasswordPlaceholder}" Foreground="{DynamicResource SecondaryTextBrush}" FontWeight="Medium" Margin="0,10,0,5"/>
                <Grid>
                    <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Width="20" Height="20" Margin="10 0 10 0" Fill="{DynamicResource PrimaryTextBrush}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform">
                                    <VisualBrush.Visual>
                                        <svg:SvgViewbox Source="Sources/password.svg"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <PasswordBox x:Name="MyPasswordBox" 
                                     Background="Transparent" BorderThickness="0" Padding="8,12" 
                                     VerticalContentAlignment="Center" Width="320" Grid.Column="1"
                                     FontSize="14"
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     behaviors:PasswordBoxBehavior.Attach="True"
                                     behaviors:PasswordBoxBehavior.Password="{Binding CurrentPassword, Mode=TwoWay}"
                                     behaviors:PasswordBoxBehavior.SubmitCommand="{Binding LoginCommand}" />
                    </Grid>
                    <!-- Плейсхолдер -->
                    <TextBlock Text="••••••••" Foreground="{DynamicResource TertiaryTextBrush}" VerticalAlignment="Center" 
                               Margin="50,0,0,0" IsHitTestVisible="False"
                               Visibility="{Binding CurrentPassword, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                </Grid>

                <!-- Поле Confirm Password (только для регистрации) -->
                <StackPanel Visibility="{Binding IsRegisterMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Label Content="{DynamicResource Loc.Login.ConfirmPassword}" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontWeight="Medium" 
                           Margin="0,10,0,5"/>
                    <Grid>
                        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="8" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Background="Transparent" BorderThickness="0" Padding="8,12" 
                                         VerticalContentAlignment="Center" Width="320" Grid.Column="1"
                                         FontSize="14"
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         behaviors:PasswordBoxBehavior.Attach="True"
                                         behaviors:PasswordBoxBehavior.Password="{Binding ConfirmPassword, Mode=TwoWay}"
                                         behaviors:PasswordBoxBehavior.SubmitCommand="{Binding RegisterCommand}" />

                            <Rectangle Width="20" Height="20" Margin="10 0 10 0" Fill="{DynamicResource PrimaryTextBrush}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Uniform">
                                        <VisualBrush.Visual>
                                            <svg:SvgViewbox Source="Sources/password.svg"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                        
                        <!-- Плейсхолдер -->
                        <TextBlock Text="••••••••" 
                                   Foreground="{DynamicResource TertiaryTextBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="50,0,0,0" 
                                   IsHitTestVisible="False"
                                   Visibility="{Binding ConfirmPassword, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                    </Grid>

                    <Label Content="{DynamicResource Loc.Login.CodePlaceholder}" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontWeight="Medium" 
                           Margin="0,15,0,5"/>
                    <Grid>
                        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Rectangle Width="20" Height="20" Margin="10 0 10 0" Fill="{DynamicResource PrimaryTextBrush}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Uniform">
                                        <VisualBrush.Visual>
                                            <svg:SvgViewbox Source="Sources/school.svg"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBox x:Name="InviteCodeBox"
                                     Text="{Binding InviteCode, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     Padding="5,12"                                      
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     VerticalContentAlignment="Center" 
                                     Grid.Column="1"
                                     FontSize="14"/>
                        </Grid>
                        <!-- Плейсхолдер -->
                        <TextBlock Text="TR-123456" 
                                   Foreground="{DynamicResource TertiaryTextBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="45,0,0,0" 
                                   IsHitTestVisible="False"
                                   Visibility="{Binding InviteCode, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                    </Grid>
                    <TextBlock Text="{DynamicResource Loc.Login.UnderCodePlaceholder}" FontSize="11" Foreground="#6B7280" Margin="5,2,0,0"/>
                 
                    <!-- Сообщение статуса -->
                    <TextBlock Text="{Binding JoinClassMessage}" Foreground="{Binding JoinClassMessageColor}" Margin="0,5,0,0"/>

                </StackPanel>

                <!-- Remember Me (только для логина) -->
                <CheckBox Content="{DynamicResource Loc.Login.RememberMe}" 
                          Foreground="{DynamicResource PrimaryTextBrush}" 
                          Margin="0,15,0,0"
                          Visibility="{Binding IsRegisterMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#EF4444" 
                           Margin="0,10,0,0" HorizontalAlignment="Center" TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}, ConverterParameter=invert}"/>

                <!-- Основная кнопка (Login/Register) -->
                <Button Margin="0,20,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            
                            <Setter Property="Content" Value="{DynamicResource Loc.Login.Button}"/>
                            <Setter Property="Command" Value="{Binding LoginCommand}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRegisterMode}" Value="True">
                                    <Setter Property="Content" Value="{DynamicResource Loc.Login.CreateAccountButton}"/>
                                    <Setter Property="Command" Value="{Binding RegisterCommand}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="{DynamicResource Loc.Login.OfflineModeButton}"
                        Command="{Binding OfflineLoginCommand}"
                        Style="{StaticResource LinkButton}" 
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        Visibility="{Binding IsRegisterMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>
                <!-- Разделитель и доп. кнопки (только для логина) -->
                <StackPanel Margin="0,25,0,0"
                            Visibility="{Binding IsRegisterMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                    <Grid VerticalAlignment="Center">
                        <Border BorderBrush="#D1D5DB" BorderThickness="0,1,0,0" Height="1"/>
                        <TextBlock Text="Source" Background="{DynamicResource MainBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}"
                                   HorizontalAlignment="Center" Padding="8,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Style="{StaticResource SocialButton}" Command="{Binding OpenGitHubCommand}">
                            <svg:SvgViewbox Source="Sources/github.svg" 
                                Width="20"
                                Height="20"
                                Stretch="Fill"/>

                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Переключатель режима (Login/Register) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
                    <TextBlock Foreground="#4B5563">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <!-- Default (Login mode) -->
                                <Setter Property="Text" Value="{DynamicResource Loc.Login.SignUpPart1}"/>
                                <Style.Triggers>
                                    <!-- Register mode -->
                                    <DataTrigger Binding="{Binding IsRegisterMode}" Value="True">
                                        <Setter Property="Text" Value="{DynamicResource Loc.Login.LogInPart1}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Command="{Binding ToggleModeCommand}" Margin="5,0,0,0" FontWeight="Medium">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource LinkButton}">
                                <Setter Property="Content" Value="{DynamicResource Loc.Login.SignUpPart2}"/>
                                <Style.Triggers>
                                    <!-- Register mode -->
                                    <DataTrigger Binding="{Binding IsRegisterMode}" Value="True">
                                        <Setter Property="Content" Value="{DynamicResource Loc.Login.Button}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
