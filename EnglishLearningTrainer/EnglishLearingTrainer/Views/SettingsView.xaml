<UserControl x:Class="LearningTrainer.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:behaviors="clr-namespace:LearningTrainer.Behaviors"
             xmlns:local="clr-namespace:LearningTrainer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">

        <TextBlock Text="Настройки" FontSize="{DynamicResource HeaderFontSize}" FontWeight="Bold"/>
        <TextBlock Text="Здесь будут общие настройки приложения." FontSize="{DynamicResource BaseFontSize}" Margin="0,5,0,20"/>
        <TextBlock Text="Смена пароля" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10"/>

        <TextBlock Text="Старый пароль:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox x:Name="OldPasswordBox" 
             FontSize="{DynamicResource BaseFontSize}" 
             Padding="5" 
             Margin="0,0,0,10"

             behaviors:PasswordBoxBehavior.Attach="True"
             behaviors:PasswordBoxBehavior.Password="{Binding OldPassword, Mode=TwoWay}"
             behaviors:PasswordBoxBehavior.SubmitCommand="{Binding ChangePasswordCommand}"/>

        <TextBlock Text="Новый пароль:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox x:Name="NewPasswordBox" 
             FontSize="{DynamicResource BaseFontSize}" 
             Padding="5" 
             Margin="0,0,0,10"

             behaviors:PasswordBoxBehavior.Attach="True"
             behaviors:PasswordBoxBehavior.Password="{Binding NewPassword, Mode=TwoWay}"
             behaviors:PasswordBoxBehavior.SubmitCommand="{Binding ChangePasswordCommand}"/>

        <TextBlock Text="{Binding ChangePasswordMessage}" Margin="0,5,0,5">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="Green"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsError}" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <Button x:Name="ChangePasswordButton"
             Content="Сменить пароль"
             Command="{Binding ChangePasswordCommand}"
             CommandParameter="{Binding ElementName=NewPasswordBox, Path=(behaviors:PasswordBoxBehavior.Password)}"
             Style="{StaticResource PrimaryButton}" 
             HorizontalAlignment="Left"
             Width="200"/>
        
        <Button Content="Выйти из аккаунта"
                Command="{Binding LogoutCommand}"
                Style="{StaticResource DangerButton}" 
                Margin="0,50,0,0"
                HorizontalAlignment="Left"
                Width="200"/>
    </StackPanel>
</UserControl>
