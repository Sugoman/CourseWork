<UserControl x:Class="EnglishLearningTrainer.Views.AddDictionaryView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <TextBlock Text="Создать новый словарь" 
                       FontSize="{DynamicResource HeaderFontSize}" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Название словаря:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding DictionaryName, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="{DynamicResource BaseFontSize}" 
                     Padding="10" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Описание:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="{DynamicResource BaseFontSize}"
                     Padding="10" 
                     Height="60" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Изучаемый язык:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding LanguageFrom, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="{DynamicResource BaseFontSize}"
                             Padding="10" 
                             Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Родной язык:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding LanguageTo, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="{DynamicResource BaseFontSize}"
                             Padding="10" 
                             Margin="0,0,0,15"/>
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource DangerButton}" 
                        Width="100" 
                        Margin="0,0,10,0"/>
                <Button Content="Создать" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource SuccessButton}" 
                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
