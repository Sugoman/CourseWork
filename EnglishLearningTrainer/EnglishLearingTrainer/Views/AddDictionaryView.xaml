<UserControl x:Class="LearningTrainer.Views.AddDictionaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600"
             Background="{DynamicResource MainBackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                CornerRadius="12" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Margin="20"
                Padding="30"
                MaxWidth="600"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="15" ShadowDepth="4"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="{DynamicResource Loc.AddDict.CreateDict}" 
                           FontSize="{DynamicResource HeaderFontSize}" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,25"/>
                <TextBlock Text="{DynamicResource Loc.AddDict.TitleDictLabel}" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                <Border Style="{StaticResource InputContainerStyle}">
                    <TextBox Text="{Binding DictionaryName, UpdateSourceTrigger=PropertyChanged}" 
                             Foreground="{DynamicResource PrimaryTextBrush}"
                             CaretBrush="{DynamicResource PrimaryTextBrush}"
                             FontSize="{DynamicResource BaseFontSize}" 
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0,2"/>
                </Border>

                <TextBlock Text="{DynamicResource Loc.AddDict.DescriptionDictLabel}" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontSize="14" FontWeight="Medium" Margin="0,10,0,5"/>

                <Border Style="{StaticResource InputContainerStyle}">
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Foreground="{DynamicResource PrimaryTextBrush}"
                             CaretBrush="{DynamicResource PrimaryTextBrush}"
                             FontSize="{DynamicResource BaseFontSize}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0,2"
                             MinHeight="80" 
                             VerticalContentAlignment="Top"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </Border>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{DynamicResource Loc.AddDict.StudiedLangLabel}" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                        <Border Style="{StaticResource InputContainerStyle}">
                            <TextBox Text="{Binding LanguageFrom, UpdateSourceTrigger=PropertyChanged}" 
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     CaretBrush="{DynamicResource PrimaryTextBrush}"
                                     FontSize="{DynamicResource BaseFontSize}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0,2"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="{DynamicResource Loc.AddDict.NativeLangLabel}" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                        <Border Style="{StaticResource InputContainerStyle}">
                            <TextBox Text="{Binding LanguageTo, UpdateSourceTrigger=PropertyChanged}" 
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     CaretBrush="{DynamicResource PrimaryTextBrush}"
                                     FontSize="{DynamicResource BaseFontSize}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0,2"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,1,0,0" Margin="0,20,0,20" Opacity="0.3"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{DynamicResource Loc.Button.CancelButton}" 
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource DangerButton}" 
                            Width="100" 
                            Margin="0,0,15,0"/>
                    <Button Content="{DynamicResource Loc.Button.CreateButton}" 
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource SuccessButton}" 
                            Width="120"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>