<UserControl x:Class="LearningTrainer.Views.LearningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningTrainer.Views"
             xmlns:system="clr-namespace:System;assembly=mscorlib" 
             xmlns:models="clr-namespace:LearningTrainerShared.Models;assembly=LearningTrainerShared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F0F2F5">

    <UserControl.Resources>
        <system:Boolean x:Key="True">True</system:Boolean>
        <system:Boolean x:Key="False">False</system:Boolean>
    </UserControl.Resources>

    <Grid>
        <!-- Экран завершения сессии -->
        <Grid Background="#F0F2F5" VerticalAlignment="Center" HorizontalAlignment="Center"
              Visibility="{Binding IsSessionComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🎉" FontSize="80" HorizontalAlignment="Center"/>
                <TextBlock Text="Отличная работа!" FontSize="28" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="Все слова на сегодня выучены." FontSize="{DynamicResource BaseFontSize}" Foreground="Gray" Margin="0,5,0,20"/>
                <Button Content="Вернуться на дашборд" Command="{Binding CloseTabCommand}" Style="{StaticResource BaseButton}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Основной экран тренажера -->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSessionComplete}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="250">
                <Grid.Resources>
                    <Style TargetType="TextBlock" x:Key="CardTextStyle">
                        <Setter Property="FontSize" Value="36"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </Grid.Resources>

                <!-- Задняя сторона -->
                <Border>
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0" />
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="CornerRadius" Value="15"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="2" Color="LightGray" Opacity="0.3" BlurRadius="15"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" BeginTime="0:0:0.2" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding CurrentWord.Translation}" Style="{StaticResource CardTextStyle}" Foreground="White"/>
                </Border>

                <!-- Передняя сторона -->
                <Border>
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" />
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="CornerRadius" Value="15"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="2" Color="LightGray" Opacity="0.3" BlurRadius="15"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" BeginTime="0:0:0.2" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentWord.OriginalWord}" 
                                   Style="{StaticResource CardTextStyle}"
                                   TextAlignment="Center"/>
                        
                        <TextBlock Text="{Binding CurrentWord.Transcription}"
                            FontSize="20"
                            Foreground="#555"
                            FontFamily="Arial" 
                            FontStyle="Italic"
                            Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Vertical" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="20">
                <Button Content="Показать ответ" 
            Command="{Binding FlipCardCommand}"
            Width="200"
            Height="40">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Button Content="Снова" 
                Command="{Binding AnswerCommand}" 
                CommandParameter="{x:Static models:ResponseQuality.Again}"
                Style="{StaticResource DangerButton}" 
                Width="90" Height="40" Margin="5"/>

                    <Button Content="Трудно" 
                Command="{Binding AnswerCommand}" 
                CommandParameter="{x:Static models:ResponseQuality.Hard}"
                Style="{StaticResource BaseButton}" 
                Width="90" Height="40" Margin="5"/>

                    <Button Content="Хорошо" 
                Command="{Binding AnswerCommand}" 
                CommandParameter="{x:Static models:ResponseQuality.Good}"
                Style="{StaticResource BaseButton}" 
                Width="90" Height="40" Margin="5"/>

                    <Button Content="Легко" 
                Command="{Binding AnswerCommand}" 
                CommandParameter="{x:Static models:ResponseQuality.Easy}"
                Style="{StaticResource SuccessButton}" 
                Width="90" Height="40" Margin="5"/>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>