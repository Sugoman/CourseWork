<UserControl x:Class="LearningTrainer.Views.AddWordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <TextBlock Text="Добавить новое слово" 
                       FontSize="{DynamicResource HeaderFontSize}"
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Иностранное слово:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding OriginalWord, UpdateSourceTrigger=PropertyChanged}" 
                     PreviewKeyDown="OnOriginalWordTextBox_PreviewKeyDown"
                     x:Name="OriginalWordTextBox"
                     FontSize="{DynamicResource BaseFontSize}" 
                     Padding="10" 
                     Margin="0,0,0,15"/>
            <TextBlock Margin="0,5,0,10" Visibility="{Binding DataContext.CanManage, Converter={StaticResource BooleanToVisibilityConverter}}">
    <Run Text="Возможно, вы имели в виду: "/>
    <Run Text="{Binding Suggestion}" Foreground="Blue" FontWeight="Bold"/>
            </TextBlock>
            
            <TextBlock Text="Перевод:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Translation, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="{DynamicResource BaseFontSize}"
                     Padding="10" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Пример использования (необязательно):" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Example, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="{DynamicResource BaseFontSize}"
                     Padding="10" 
                     Height="60" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,0,0,25"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource DangerButton}" 
                        Width="100" 
                        Margin="0,0,10,0"/>
                <Button Content="Сохранить" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource SuccessButton}" 
                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
