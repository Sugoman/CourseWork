<UserControl x:Class="EnglishLearningTrainer.Views.DictionaryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Управление словарем" 
                       FontSize="{DynamicResource HeaderFontSize}" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!-- Редактирование информации о словаре -->
            <GroupBox Header="Информация о словаре" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" FontWeight="SemiBold" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DictionaryName}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Описание:" FontWeight="SemiBold" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Description}" Height="60" TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Изучаемый язык:" FontWeight="SemiBold" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding LanguageFrom}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Родной язык:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding LanguageTo}" Margin="0,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Сохранить изменения" 
                                Command="{Binding SaveDictionaryCommand}"
                                Style="{StaticResource SuccessButton}" 
                                Width="150"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Управление словами -->
            <GroupBox Header="Слова в словаре" Padding="15">
                <StackPanel>
                    <Button Content="+ Добавить слово" 
                            Command="{Binding AddWordCommand}"
                            Style="{StaticResource PrimaryButton}" 
                            Width="150" 
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <ItemsControl ItemsSource="{Binding Words}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding OriginalWord}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Translation}" Foreground="Gray" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Example}" FontStyle="Italic" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="🗑️" 
                                                Command="{Binding DataContext.DeleteWordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButton}" 
                                                Width="30"
                                                Height="30"
                                                ToolTip="Удалить слово"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Кнопка удаления словаря -->
                    <Button Content="🗑️ УДАЛИТЬ СЛОВАРЬ" 
                            Command="{Binding DeleteDictionaryCommand}"
                            Style="{StaticResource DangerButton}" 
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0"
                            Width="180"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
