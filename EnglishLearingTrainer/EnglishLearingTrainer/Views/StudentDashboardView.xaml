<UserControl x:Class="EnglishLearningTrainer.Views.StudentDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishLearningTrainer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Dictionaries}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="250" MinHeight="150" Background="White" CornerRadius="8" Margin="10" BorderThickness="1" BorderBrush="#E0E0E0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="5" Color="LightGray" Opacity="0.5"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="15">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#333" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    <TextBlock FontSize="12" Foreground="Gray" Margin="0,10,0,0">
                                        <Run Text="Слов:"/>
                                        <Run Text="{Binding WordCount}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>

                                <Button Grid.Row="1" 
        Content="Начать изучение" 
        Command="{Binding DataContext.StartLearningCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding}"
        Style="{StaticResource PrimaryButton}" 
        Margin="15" 
        HorizontalAlignment="Stretch"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
