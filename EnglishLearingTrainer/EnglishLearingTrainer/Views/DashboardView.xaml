<UserControl x:Class="EnglishLearningTrainer.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishLearningTrainer.Views"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <system:Boolean x:Key="True">True</system:Boolean>
        <system:Boolean x:Key="False">False</system:Boolean>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="20,10">
                <Button Content="+ Новый словарь" 
                    Command="{Binding CreateDictionaryCommand}"
                    Style="{StaticResource PrimaryButton}" 
                    Margin="0,0,10,0"
                    Visibility="{Binding DataContext.CanManage, 
                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                         Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="+ Новое правило" 
                    Command="{Binding CreateRuleCommand}"
                    Style="{StaticResource PrimaryButton}"
                        Visibility="{Binding CanManage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
            <!-- Раздел со словарями -->
            <TextBlock Text="Словари для изучения" Style="{StaticResource HeaderTextBlockStyle}"/>
            <ItemsControl ItemsSource="{Binding Dictionaries}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="250" MinHeight="150" Background="White" CornerRadius="8" Margin="10" BorderThickness="1" BorderBrush="#E0E0E0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="5" Color="LightGray" Opacity="0.5"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="15">
                                    <Button Content="+ Добавить слово" 
                                        Command="{Binding DataContext.AddWordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SuccessButton}" 
                                        Margin="15,5" 
                                        HorizontalAlignment="Stretch"
                                        Visibility="{Binding DataContext.CanManage, 
                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                         Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- В DataTemplate словаря, рядом с другими кнопками -->
                                    <Button Content="⚙️ Управление" 
                                        Command="{Binding DataContext.ManageDictionaryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource BaseButton}" 
                                        Margin="15,5"
                                        HorizontalAlignment="Stretch"
                                        Visibility="{Binding DataContext.CanManage, 
                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                         Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#333" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    <TextBlock FontSize="12" Foreground="Gray" Margin="0,10,0,0">
                                        <Run Text="Слов:"/>
                                        <Run Text="{Binding WordCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>

                                <Button Grid.Row="1" 
                                    Content="Начать изучение" 
                                    Command="{Binding DataContext.StartLearningCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource PrimaryButton}" 
                                    Margin="15" 
                                    HorizontalAlignment="Stretch"/>
                                <!-- В DataTemplate словаря, рядом с кнопкой "Начать изучение" -->
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Новый раздел с правилами -->
            <TextBlock Text="Грамматика и правила" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,30,0,0"/>
            <ItemsControl ItemsSource="{Binding Rules}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}">
                            <StackPanel Margin="20">
                                <!-- Можно добавить иконку книги -->
                                <TextBlock Text="{Binding Title}" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding Description}" Style="{StaticResource CardDescriptionStyle}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Читать правило" 
                                            Style="{StaticResource BaseButton}"
                                            Width="150" Height="30"
                                            Command="{Binding Path=DataContext.OpenRuleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="🗑️" 
                                            Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButton}" 
                                            Margin="5,0,0,0"
                                            Width="30"
                                            ToolTip="Удалить правило"
                                            Visibility="{Binding DataContext.CanManage, 
                         RelativeSource={RelativeSource AncestorType=UserControl}, 
                         Converter={StaticResource BooleanToVisibilityConverter}}"
    />
                                        
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>
