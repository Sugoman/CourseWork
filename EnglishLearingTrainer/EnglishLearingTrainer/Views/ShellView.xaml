<UserControl x:Class="EnglishLearningTrainer.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:EnglishLearningTrainer.ViewModels" 
             xmlns:views="clr-namespace:EnglishLearningTrainer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <TabControl ItemsSource="{Binding Tabs}" SelectedItem="{Binding SelectedTab}">
            <TabControl.ItemTemplate>
                <!-- Как выглядит заголовок вкладки -->
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                        <!-- Кнопка закрытия вкладки -->
                        <Button Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource CloseTabButtonStyle}"
                                Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <!-- Как выглядит содержимое вкладки -->
                <DataTemplate>
                    <ContentControl>
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type viewmodels:StudentDashboardViewModel}">
                                <views:StudentDashboardView/>
                            </DataTemplate>
                            <!-- НОВОЕ ПРАВИЛО: Если видишь LearningViewModel -> рисуй LearningView -->
                            <DataTemplate DataType="{x:Type viewmodels:LearningViewModel}">
                                <views:LearningView/>
                            </DataTemplate>
                        </ContentControl.Resources>
                        <ContentPresenter Content="{Binding}"/>
                    </ContentControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
