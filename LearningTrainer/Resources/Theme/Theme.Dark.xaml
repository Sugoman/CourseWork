<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--                    FLUENT DARK THEME - Modern                   -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <!-- BACKGROUND COLORS -->
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="SecondaryMainBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="ShallBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1C2128"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#2D333B"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#161B22"/>

    <!-- GLASS / ACRYLIC EFFECTS -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#B0161B22"/>
    <SolidColorBrush x:Key="GlassLightBrush" Color="#401C2128"/>

    <!-- HOVER / INTERACTIVE STATES -->
    <SolidColorBrush x:Key="IsMouseOverBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#484F58"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#388BFD26"/>

    <!-- BORDERS -->
    <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#58A6FF"/>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--                         ACCENT COLORS                           -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <Color x:Key="PrimaryAccentColor">#58A6FF</Color>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#79C0FF"/>

    <!-- Gradient Accent -->
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#58A6FF" Offset="0"/>
        <GradientStop Color="#A371F7" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientVerticalBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#58A6FF" Offset="0"/>
        <GradientStop Color="#388BFD" Offset="1"/>
    </LinearGradientBrush>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--                      BUTTON COLORS                              -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <!-- Success -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="MouseOverSuccessBrush" Color="#56D364"/>
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3FB950" Offset="0"/>
        <GradientStop Color="#2EA043" Offset="1"/>
    </LinearGradientBrush>

    <!-- Action / Primary -->
    <SolidColorBrush x:Key="ActionBrush" Color="#238636"/>
    <SolidColorBrush x:Key="MouseOverActionBrush" Color="#2EA043"/>
    <LinearGradientBrush x:Key="ActionGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#238636" Offset="0"/>
        <GradientStop Color="#196C2E" Offset="1"/>
    </LinearGradientBrush>

    <!-- Danger -->
    <SolidColorBrush x:Key="DangerBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="MouseOverDangerBrush" Color="#FF7B72"/>
    <LinearGradientBrush x:Key="DangerGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F85149" Offset="0"/>
        <GradientStop Color="#DA3633" Offset="1"/>
    </LinearGradientBrush>

    <!-- Warning -->
    <SolidColorBrush x:Key="WarningBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="MouseOverWarningBrush" Color="#E3B341"/>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--                       TEXT COLORS                               -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <Color x:Key="PrimaryTextColor">#E6EDF3</Color>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8B949E"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#6E7681"/>
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="#484F58"/>
    <SolidColorBrush x:Key="LinkTextBrush" Color="#58A6FF"/>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--                   NOTIFICATION COLORS                           -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <SolidColorBrush x:Key="NotificationAccessDeniedBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="NotificationInfoBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="NotificationSuccessBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="NotificationErrorBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="NotificationRoleInfoBrush" Color="#A371F7"/>
    <SolidColorBrush x:Key="NotificationWarningBrush" Color="#D29922"/>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--                      SHADOW EFFECTS                             -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <DropShadowEffect x:Key="SubtleShadow" ShadowDepth="0" BlurRadius="20" Color="#000000" Opacity="0.4"/>
    <DropShadowEffect x:Key="MediumShadow" ShadowDepth="2" BlurRadius="25" Color="#000000" Opacity="0.5"/>
    <DropShadowEffect x:Key="HoverShadow" ShadowDepth="4" BlurRadius="30" Color="#000000" Opacity="0.6"/>
    <DropShadowEffect x:Key="AccentGlow" ShadowDepth="0" BlurRadius="20" Color="#58A6FF" Opacity="0.4"/>
    <DropShadowEffect x:Key="SuccessGlow" ShadowDepth="0" BlurRadius="15" Color="#3FB950" Opacity="0.4"/>
    <DropShadowEffect x:Key="DangerGlow" ShadowDepth="0" BlurRadius="15" Color="#F85149" Opacity="0.4"/>

</ResourceDictionary>