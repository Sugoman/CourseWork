<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#131314"/>
    <SolidColorBrush x:Key="SecondaryMainBackgroundBrush" Color="#1E1F20"/>
    <SolidColorBrush x:Key="IsMouseOverBrush" Color="#111111"/>


    <SolidColorBrush x:Key="ShallBackgroundBrush" Color="#2E2E2E"/>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E"/>

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#2D2D2D"/>

    <SolidColorBrush x:Key="SeparatorBrush" Color="#D1D5DB"/>

    <SolidColorBrush x:Key="BorderBrush" Color="#131314"/>

    

                        <!-- BUTTONS BACKGROUND -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#30A966"/>
    <SolidColorBrush x:Key="MouseOverSuccessBrush" Color="#32C277"/>
    
    <SolidColorBrush x:Key="ActionBrush" Color="#0056b3"/>
    <SolidColorBrush x:Key="MouseOverActionBrush" Color="#007BFF"/>
    
    <SolidColorBrush x:Key="DangerBrush" Color="#F87171"/>
    
    <Color x:Key="PrimaryTextColor">#E5E7EB</Color>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1E1E1E"/>

    
                                <!-- TEXT -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E5E7EB"/>

    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#9CA3AF"/>

    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#6B7280"/>
    
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#60A5FA"/>
    
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF"/>
</ResourceDictionary>