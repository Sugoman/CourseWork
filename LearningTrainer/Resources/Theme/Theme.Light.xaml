<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BACKGROUND COLORS -->
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryMainBackgroundBrush" Color="#F4F5F7"/>
    <SolidColorBrush x:Key="ShallBackgroundBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#F4F5F7"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#F4F5F7"/>

    <!-- GLASS / ACRYLIC EFFECTS -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#B0F4F5F7"/>
    <SolidColorBrush x:Key="GlassLightBrush" Color="#40FFFFFF"/>

    <!-- HOVER / INTERACTIVE STATES -->
    <SolidColorBrush x:Key="IsMouseOverBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#2563EB26"/>

    <!-- BORDERS -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#2563EB"/>

    <!-- ACCENT COLORS -->
    <Color x:Key="PrimaryAccentColor">#2563EB</Color>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#3B82F6"/>

    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2563EB" Offset="0"/>
        <GradientStop Color="#7C3AED" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="AccentGradientVerticalBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2563EB" Offset="0"/>
        <GradientStop Color="#1D4ED8" Offset="1"/>
    </LinearGradientBrush>

    <!-- BUTTON COLORS -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#30A966"/>
    <SolidColorBrush x:Key="MouseOverSuccessBrush" Color="#32C277"/>
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#30A966" Offset="0"/>
        <GradientStop Color="#22955A" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ActionBrush" Color="#0056b3"/>
    <SolidColorBrush x:Key="MouseOverActionBrush" Color="#007BFF"/>
    <LinearGradientBrush x:Key="ActionGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0056b3" Offset="0"/>
        <GradientStop Color="#004494" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="DangerBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="MouseOverDangerBrush" Color="#FCA5A5"/>
    <LinearGradientBrush x:Key="DangerGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F87171" Offset="0"/>
        <GradientStop Color="#EF4444" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="MouseOverWarningBrush" Color="#FBBF24"/>

    <!-- TEXT COLORS -->
    <Color x:Key="PrimaryTextColor">#1F2937</Color>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="LinkTextBrush" Color="#2563EB"/>

    <!-- NOTIFICATION COLORS -->
    <SolidColorBrush x:Key="NotificationAccessDeniedBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="NotificationInfoBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="NotificationSuccessBrush" Color="#30A966"/>
    <SolidColorBrush x:Key="NotificationErrorBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="NotificationRoleInfoBrush" Color="#8B5CF6"/>
    <SolidColorBrush x:Key="NotificationWarningBrush" Color="#FBBF24"/>

    <!-- SHADOW EFFECTS -->
    <DropShadowEffect x:Key="SubtleShadow" ShadowDepth="0" BlurRadius="15" Color="#000000" Opacity="0.08"/>
    <DropShadowEffect x:Key="MediumShadow" ShadowDepth="2" BlurRadius="20" Color="#000000" Opacity="0.12"/>
    <DropShadowEffect x:Key="HoverShadow" ShadowDepth="4" BlurRadius="25" Color="#000000" Opacity="0.15"/>
    <DropShadowEffect x:Key="AccentGlow" ShadowDepth="0" BlurRadius="20" Color="#2563EB" Opacity="0.3"/>
    <DropShadowEffect x:Key="SuccessGlow" ShadowDepth="0" BlurRadius="15" Color="#30A966" Opacity="0.3"/>
    <DropShadowEffect x:Key="DangerGlow" ShadowDepth="0" BlurRadius="15" Color="#F87171" Opacity="0.3"/>

</ResourceDictionary>
