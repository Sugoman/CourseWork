<Window x:Class="LearningTrainer.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:views="clr-namespace:LearningTrainer.Views"
        xmlns:viewmodels="clr-namespace:LearningTrainer.ViewModels"
        Title="English Learning Trainer" 
        Height="720" Width="1280"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Name="AppWindow">

    <Border Background="{DynamicResource MainBackgroundBrush}" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="{DynamicResource BorderBrush}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="25" Color="#000000" Opacity="0.35"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Modern Title Bar -->
            <Border Grid.Row="0" 
                    Height="40" 
                    Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                    CornerRadius="12,12,0,0"
                    MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon/Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="📚" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="Learning Trainer" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" 
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="─" Width="46" Height="40" Click="MinimizeButton_Click" Style="{StaticResource WindowControlButton}"/>
                        <Button Content="☐" Width="46" Height="40" Click="MaximizeButton_Click" Style="{StaticResource WindowControlButton}"/>
                        <Button Content="✕" Width="46" Height="40" Click="CloseButton_Click" Style="{StaticResource WindowCloseButton}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                        <views:LoginView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:ShellViewModel}">
                        <views:ShellView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Border>
</Window>
