<UserControl x:Class="LearningTrainer.Views.LearningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningTrainer.Views"
             xmlns:system="clr-namespace:System;assembly=mscorlib" 
             xmlns:models="clr-namespace:LearningTrainerShared.Models;assembly=LearningTrainerShared"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource MainBackgroundBrush}">

    <UserControl.Resources>
        <system:Boolean x:Key="True">True</system:Boolean>
        <system:Boolean x:Key="False">False</system:Boolean>
    </UserControl.Resources>

    <Grid>
        <Grid Background="{DynamicResource MainBackgroundBrush}" 
              VerticalAlignment="Center" HorizontalAlignment="Center"
              Visibility="{Binding IsSessionComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="550">
                <StackPanel HorizontalAlignment="Center" Margin="20">
                    <!-- Emoji + Message -->
                    <TextBlock Text="{Binding ResultEmoji}" FontSize="72" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ResultMessage}"
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>

                    <!-- Stats cards -->
                    <UniformGrid Columns="4" Margin="0,24,0,0" HorizontalAlignment="Center" MaxWidth="520">
                        <!-- Total -->
                        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                                CornerRadius="10" Margin="4" Padding="16,12"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalWordsCount}" FontSize="28" FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryAccentBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Всего" FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- Correct -->
                        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                                CornerRadius="10" Margin="4" Padding="16,12"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CorrectCount}" FontSize="28" FontWeight="Bold"
                                           Foreground="{DynamicResource SuccessBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Верно" FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- Wrong -->
                        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                                CornerRadius="10" Margin="4" Padding="16,12"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding WrongCount}" FontSize="28" FontWeight="Bold"
                                           Foreground="{DynamicResource DangerBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Ошибки" FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!-- Duration -->
                        <Border Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                                CornerRadius="10" Margin="4" Padding="16,12"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SessionDuration}" FontSize="22" FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Время" FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Accuracy bar -->
                    <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" Width="400">
                        <Grid>
                            <TextBlock Text="Точность" FontSize="14" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock HorizontalAlignment="Right" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Text="{Binding AccuracyPercent, StringFormat={}{0:0}%}"/>
                        </Grid>
                        <Border CornerRadius="5" Height="10" Margin="0,6,0,0"
                                Background="{DynamicResource BorderBrush}">
                            <Border CornerRadius="5" HorizontalAlignment="Left"
                                    Background="{DynamicResource SuccessBrush}"
                                    Width="{Binding AccuracyPercent, Converter={StaticResource PercentToFixedWidthConverter}}"/>
                        </Border>
                    </StackPanel>

                    <!-- Difficult words list -->
                    <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" Width="400">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DifficultWords.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Слова с ошибками:" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding DifficultWords}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SecondaryMainBackgroundBrush}"
                                            CornerRadius="6" Margin="0,2" Padding="12,6"
                                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                        <TextBlock Text="{Binding OriginalWord}" FontSize="14"
                                                   Foreground="{DynamicResource DangerBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Close button -->
                    <Button Content="   Вернуться на дашборд   " 
                            Command="{Binding CloseTabCommand}" 
                            Style="{StaticResource BaseButton}" 
                            HorizontalAlignment="Center"
                            Padding="20,10"
                            MinHeight="40"
                            Margin="0,24,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSessionComplete}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="250">
                <Grid.Resources>
                    <Style TargetType="TextBlock" x:Key="CardTextStyle">
                        <Setter Property="FontSize" Value="32"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                    </Style>
                </Grid.Resources>

                <Border>
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0" />
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                            <Setter Property="CornerRadius" Value="16"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.3" BlurRadius="20"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" BeginTime="0:0:0.2" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentWord.Translation}" Style="{StaticResource CardTextStyle}" Foreground="White"/>

                        <TextBlock Text="{Binding CurrentWord.Example}"
                                   FontSize="14"
                                   FontStyle="Italic"
                                   Foreground="White"
                                   Opacity="0.85"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="10,10,10,0"
                                   MaxWidth="360">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentWord.Example}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentWord.Example}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border>
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" />
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource SecondaryMainBackgroundBrush}"/>
                            <Setter Property="CornerRadius" Value="16"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.2" BlurRadius="20"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" BeginTime="0:0:0.2" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentWord.OriginalWord}" 
                                   Style="{StaticResource CardTextStyle}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <TextBlock Text="{Binding CurrentWord.Transcription}"
                                   FontSize="20"
                                   Foreground="{DynamicResource PrimaryAccentBrush}"
                                   FontFamily="Arial" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,0,40">

                <Button Content="{DynamicResource Loc.Learning.ShowAnswerButton}" 
                        Command="{Binding FlipCardCommand}"
                        Width="220"
                        Height="48"
                        FontSize="16"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Button Content="{DynamicResource Loc.Learning.AgainLabel}" 
                            Command="{Binding AnswerCommand}" 
                            CommandParameter="{x:Static models:ResponseQuality.Again}"
                            Style="{StaticResource DangerButton}" 
                            Width="100" Height="45" Margin="5"/>

                    <Button Content="{DynamicResource Loc.Learning.HardLabel}" 
                            Command="{Binding AnswerCommand}" 
                            CommandParameter="{x:Static models:ResponseQuality.Hard}"
                            Style="{StaticResource BaseButton}" 
                            Width="100" Height="45" Margin="5"/>

                    <Button Content="{DynamicResource Loc.Learning.FineLabel}" 
                            Command="{Binding AnswerCommand}" 
                            CommandParameter="{x:Static models:ResponseQuality.Good}"
                            Style="{StaticResource BaseButton}" 
                            Width="100" Height="45" Margin="5"/>

                    <Button Content="{DynamicResource Loc.Learning.EasyLabel}" 
                            Command="{Binding AnswerCommand}" 
                            CommandParameter="{x:Static models:ResponseQuality.Easy}"
                            Style="{StaticResource SuccessButton}" 
                            Width="100" Height="45" Margin="5"/>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>