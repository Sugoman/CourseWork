<UserControl x:Class="LearningTrainer.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:LearningTrainer.ViewModels" 
             xmlns:views="clr-namespace:LearningTrainer.Views"
             xmlns:converters="clr-namespace:LearningTrainer.Converters"     
             xmlns:svg="clr-namespace:SharpVectors.Converters;assembly=SharpVectors.Converters.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LearningViewModel}">
            <views:LearningView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RuleViewModel}">
            <views:RuleView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddWordViewModel}">
            <views:AddWordView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddDictionaryViewModel}">
            <views:AddDictionaryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddRuleViewModel}">
            <views:AddRuleView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:DictionaryManagementViewModel}">
            <views:DictionaryManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ShareContentViewModel}">
            <views:ShareDictionaryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RuleManagementViewModel}">
            <views:RuleManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MarketplaceViewModel}">
            <views:MarketplaceView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MarketplaceDictionaryDetailsViewModel}">
            <views:MarketplaceDictionaryDetailsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MarketplaceRuleDetailsViewModel}">
            <views:MarketplaceRuleDetailsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StatisticsViewModel}">
            <views:StatisticsView/>
        </DataTemplate>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!--                    MODERN PILL TAB STYLE                        -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderThickness="0"
                                Margin="0,0,8,0"
                                Padding="16,10"
                                CornerRadius="10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect x:Name="TabShadow" ShadowDepth="0" BlurRadius="0" Color="#000000" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Selected State - Gradient Background -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentGradientBrush}"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="{DynamicResource PrimaryAccentColor}" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Hover State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <TabControl ItemsSource="{Binding Tabs}" 
                    SelectedItem="{Binding SelectedTab}"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemContainerStyle="{StaticResource ModernTabItemStyle}">

            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Modern Glass Tab Header -->
                        <Border Grid.Row="0" 
                                Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="16,12,16,12">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#000000" Opacity="0.1" Direction="270"/>
                            </Border.Effect>
                            <TabPanel IsItemsHost="True" Background="Transparent"/>
                        </Border>

                        <!-- Content Area with subtle background -->
                        <Border Grid.Row="1" Background="{DynamicResource MainBackgroundBrush}">
                            <ContentPresenter ContentSource="SelectedContent" Margin="0"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   MaxWidth="150" 
                                   TextTrimming="CharacterEllipsis">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Button Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource CloseTabButtonStyle}"
                                ToolTip="Закрыть вкладку"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

        </TabControl>

        <!-- Global Notification Panel - Overlay in top-right corner -->
        <views:NotificationPanel HorizontalAlignment="Right" 
                                 VerticalAlignment="Top"
                                 Margin="0,70,20,0"/>
    </Grid>
</UserControl>