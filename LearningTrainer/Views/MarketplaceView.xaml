                                 Background="Transparent" BorderThickness="0" VerticalAlignment="Center"
                                 Foreground="{DynamicResource PrimaryTextBrush}" Padding="5,0"/>
                    </Grid>
                </Border>

                <!-- Dictionary Filters -->
                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding IsDictionariesTab, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,10,5">
                    <ComboBox ItemsSource="{Binding LanguageOptions}" 
