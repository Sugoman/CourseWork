                    <ComboBox ItemsSource="{Binding LanguageOptions}" 
                              SelectedItem="{Binding SelectedLanguageTo}"
                              MinWidth="80"
                              Style="{StaticResource SortComboBoxStyle}"/>
                </StackPanel>

                <!-- Rule Filters -->
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding IsRulesTab, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,10,5">
                    <ComboBox ItemsSource="{Binding CategoryOptions}" 
                              SelectedItem="{Binding SelectedCategory}"
                              MinWidth="100" Margin="0,0,5,0"
                              Style="{StaticResource SortComboBoxStyle}"/>
                    <ComboBox ItemsSource="{Binding DifficultyOptions}" 
                              SelectedValue="{Binding SelectedDifficulty}"
                              SelectedValuePath="Key" DisplayMemberPath="Value"
                              MinWidth="100"
                              Style="{StaticResource SortComboBoxStyle}"/>
                </StackPanel>

                <!-- Search Button -->
                <Button Command="{Binding SearchCommand}"
                        Style="{StaticResource PrimaryButton}" Padding="12,6" Margin="0,0,5,5">
