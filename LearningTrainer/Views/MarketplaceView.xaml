                                            </StackPanel>
                                        </Button>
                                        <Button Grid.Column="1"
                                                Command="{Binding DataContext.DownloadDictionaryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
