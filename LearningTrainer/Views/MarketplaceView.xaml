                </Button>
                <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" FontSize="{DynamicResource BaseFontSize}"
                           Foreground="{DynamicResource PrimaryTextBrush}" Margin="8,0"/>
                <Button Command="{Binding NextPageCommand}"
