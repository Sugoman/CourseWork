            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryMainBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="15,10">
            <WrapPanel>
                <!-- Search -->
                <Border Background="{DynamicResource MainBackgroundBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="6" MinHeight="32" MinWidth="180" Margin="0,0,10,5" Padding="0,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
