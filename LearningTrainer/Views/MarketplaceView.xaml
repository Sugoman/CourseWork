                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" FontSize="12" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               TextTrimming="CharacterEllipsis" MaxHeight="36" Margin="0,6,0,0"/>

                                    <!-- Category -->
                                    <Border Grid.Row="2" Background="{DynamicResource MainBackgroundBrush}" 
                                            CornerRadius="4" Padding="6,3" HorizontalAlignment="Left" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Category}" FontSize="11"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </Border>

                                    <!-- Rating & Author -->
                                    <Grid Grid.Row="3" Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Rating, Converter={StaticResource RatingToStars}}" 
                                                       Foreground="#F59E0B" FontSize="11"/>
                                            <TextBlock Text="{Binding Rating, StringFormat=' {0:F1}'}" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding AuthorName}" FontSize="11"
                                                   Foreground="{DynamicResource TertiaryTextBrush}"/>
                                    </Grid>

                                    <!-- Actions -->
                                    <Grid Grid.Row="4" Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0"
                                                Command="{Binding DataContext.ViewRuleDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
