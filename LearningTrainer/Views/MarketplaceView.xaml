                        <TextBlock Text="â—€" FontSize="{DynamicResource BaseFontSize}" Margin="0,0,4,0"/>
                        <TextBlock Text="ÐÐ°Ð·Ð°Ð´" FontSize="{DynamicResource BaseFontSize}"/>
