                                                <TextBlock Text="Ð¡ÐºÐ°Ñ‡Ð°Ñ‚ÑŒ" FontSize="{DynamicResource BaseFontSize}"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Rules Grid -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsRulesTab, Converter={StaticResource BoolToVis}}">
                <ItemsControl ItemsSource="{Binding Rules}" Margin="15">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
