<UserControl x:Class="LearningTrainer.Views.DictionaryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningTrainer.Views"
             xmlns:converters="clr-namespace:LearningTrainer.Converters"              
             xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="{DynamicResource MainBackgroundBrush}">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>

        <!-- СТИЛЬ ДЛЯ DATAGRID -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F3F4F6"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="50"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="AlternationCount" Value="2"/>
        </Style>

        <!-- Стиль заголовков колонок -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SecondaryMainBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>

        <!-- Стиль ячеек -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{DynamicResource InputBackgroundBrush}" BorderThickness="0">
                            <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource IsMouseOverBrush}"/>
                    <!-- Светло-голубой при выделении -->
                    <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Чередование строк -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource TertiaryTextBrush}"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="{DynamicResource SecondaryTextBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Edit/Delete -->
        <Style x:Key="GridActionButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#DBEAFE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки "Сохранить" (Зеленая) -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
            <!-- Green -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18">
                            <Rectangle Width="18" Height="18" Fill="{DynamicResource PrimaryTextBrush}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Uniform">
                                        <VisualBrush.Visual>
                                            <svg:SvgViewbox Source="Sources/save.svg"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MouseOverSuccessBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER & INFO -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <!-- Навигация "Назад" -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Button Style="{StaticResource BaseButton}" 
                         Background="Transparent" Foreground="#6B7280" Padding="0"
                         Command="{Binding CloseCommand}" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <!-- Иконка "Назад" -->
                        <Rectangle Width="12" Height="12" Margin="0,0,5,0" Fill="{DynamicResource SecondaryTextBrush}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform">
                                    <VisualBrush.Visual>
                                        <svg:SvgViewbox Source="Sources/back.svg"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Text="{DynamicResource Loc.Button.BackButton}" Margin="5"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">

                        <TextBox Text="{Binding DictionaryName, UpdateSourceTrigger=PropertyChanged}" 
                 FontSize="28" 
                 FontWeight="Bold" 
                 Foreground="{DynamicResource PrimaryTextBrush}"
                 BorderThickness="0,0,0,1" 
                 BorderBrush="Transparent"
                 Padding="0,0,0,2" 
                 MaxLength="60"
                 VerticalAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{DynamicResource SeparatorBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAccentBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Command="{Binding DataContext.SaveChangesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        Margin="15,0,0,0"
        VerticalAlignment="Center"
        ToolTip="Save Changes"
        Visibility="{Binding IsEditable, Converter={StaticResource BooleanToVisibilityConverter}}"
        Cursor="Hand"
        Background="Transparent"
        BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="8" Padding="12,6">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="18" Height="18" Fill="{DynamicResource SuccessBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Uniform">
                                                        <VisualBrush.Visual>
                                                            <svg:SvgViewbox Source="Sources/save.svg"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <TextBlock Text="{DynamicResource Loc.Button.SaveButton}" 
                                               Foreground="{DynamicResource SuccessBrush}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bdr" Property="Background" Value="{DynamicResource BorderBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <Border Background="{DynamicResource InputBackgroundBrush}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding LanguageFrom}" Foreground="{DynamicResource PrimaryAccentBrush}" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Text=" → " Foreground="{DynamicResource SecondaryTextBrush}" FontWeight="SemiBold" FontSize="12" Margin="5,0"/>
                                <TextBlock Text="{Binding LanguageTo}" Foreground="{DynamicResource PrimaryAccentBrush}" FontWeight="SemiBold" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
             FontSize="14" 
             Foreground="{DynamicResource SecondaryTextBrush}"
             TextWrapping="Wrap"
             AcceptsReturn="True"
             MaxWidth="700" 
             HorizontalAlignment="Left"
             Margin="0,5,0,0" 
             MaxLength="150"
             BorderThickness="0,0,0,1"
             BorderBrush="Transparent"
             Padding="0,0,0,2">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource SeparatorBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- 2. TOOLBAR (Add & Search) -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка "Добавить" -->
            <Button Grid.Column="0" 
                    Content="{DynamicResource Loc.Button.AddWordButton}"
                    MinWidth="130"
                    Command="{Binding AddWordCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="20,10"
                    Visibility="{Binding IsEditable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Поиск -->
            <Grid Grid.Column="2">
                <Border 
        Background="{DynamicResource SecondaryMainBackgroundBrush}" 
        BorderBrush="{DynamicResource SeparatorBrush}"
        BorderThickness="1"
        CornerRadius="8" 
        Width="300" Height="35"
                Grid.Column="2"/>

                <StackPanel Orientation="Horizontal">

                    <Rectangle
                        Fill="{DynamicResource PrimaryTextBrush}"
                        Height="20" Width="20"
                        Stretch="Uniform" 
                        Margin="12,0,5,0" 
                        VerticalAlignment="Center">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform">
                                <VisualBrush.Visual>
                                    <svg:SvgViewbox Source="Sources/search.svg"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>

                    <TextBox Background="Transparent" 
                             BorderThickness="0" 
                             Padding="8" 
                             VerticalContentAlignment="Center" 
                             Width="250" 
                             FontSize="14"
                             x:Name="SearchTextBox"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <TextBlock Text="{DynamicResource Loc.Dashboard.SearchPlaceholder}" 
                           Foreground="{DynamicResource PrimaryTextBrush}" 
                           VerticalAlignment="Center" 
                           Margin="50,0,0,0" 
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=SearchTextBox, 
                                        Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
            </Grid>
        </Grid>

        <!-- 3. DATA GRID -->
        <Border Grid.Row="2" Background="Transparent" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="0" ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Words}"
                      Background="{DynamicResource SecondaryMainBackgroundBrush}"
                      BorderThickness="0">
                <DataGrid.Columns>

                    <!-- Слово -->
                    <DataGridTextColumn Header="{DynamicResource Loc.Grid.WordHeader}" 
                                        Binding="{Binding OriginalWord}" 
                                        Width="*" 
                                        Foreground="{DynamicResource PrimaryTextBrush}" 
                                        FontWeight="SemiBold"/>

                    <!-- Перевод -->
                    <DataGridTextColumn Header="{DynamicResource Loc.Grid.TranslationHeader}" 
                                        Binding="{Binding Translation}"
                                        Foreground="{DynamicResource PrimaryTextBrush}"  
                                        Width="*"/>
                    
                    <!-- Транскрипция -->
                    <DataGridTextColumn Header="{DynamicResource Loc.Grid.TranscriptionHeader}" 
                                        Binding="{Binding Transcription}"
                                        Foreground="{DynamicResource PrimaryTextBrush}"  
                                        Width="*"/>

                    <!-- Пример -->
                    <DataGridTextColumn Header="{DynamicResource Loc.Grid.ExampleHeader}" 
                                        Binding="{Binding Example}" 
                                        Width="1.5*" 
                                        Foreground="{DynamicResource PrimaryTextBrush}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="ToolTip" Value="{Binding Example}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Действия -->
                    <DataGridTemplateColumn Header="{DynamicResource Loc.Grid.ActionsHeader}" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Кнопка Редактировать -->
                                    <Button Style="{StaticResource GridActionButton}" ToolTip="Edit Word">
                                        <Rectangle Width="16" Height="16" Fill="{DynamicResource PrimaryTextBrush}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Uniform">
                                                    <VisualBrush.Visual>
                                                        <svg:SvgViewbox Source="Sources/edit.svg"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Button>

                                    <!-- Кнопка Удалить -->
                                    <Button Style="{StaticResource GridActionButton}" ToolTip="Delete Word"
                                            Command="{Binding DataContext.DeleteWordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <Rectangle Width="16" Height="16" Fill="{DynamicResource PrimaryTextBrush}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Uniform">
                                                    <VisualBrush.Visual>
                                                        <svg:SvgViewbox Source="Sources/trash.svg"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 4. FOOTER -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <TextBlock VerticalAlignment="Center">
                <Run Text="{DynamicResource Loc.DictManager.TotalWordsLabel}" Foreground="{DynamicResource TertiaryTextBrush}"/>
                <Run Text="{Binding Words.Count, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource TertiaryTextBrush}"/>
            </TextBlock>

            <Button Content="{DynamicResource Loc.Button.ShareButton}" 
            Command="{Binding ShareDictionaryCommand}" 
            Style="{StaticResource PrimaryButton}"
            Background="#4B5563" Foreground="White"
            Width="150" Margin="0,0,10,0"
            Visibility="{Binding IsEditable, Converter={StaticResource BooleanToVisibilityConverter}}">
            </Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource Loc.Button.ExportButton}" 
                        Command="{Binding ExportDictionaryCommand}" 
                        Style="{StaticResource BaseButton}" 
                        Margin="0,0,10,0" 
                        MinWidth="120"
                        MinHeight="30"
                        Background="{DynamicResource InputBackgroundBrush}" 
                        Foreground="{DynamicResource PrimaryTextBrush}" 
                        BorderBrush="{DynamicResource SecondaryMainBackgroundBrush}" 
                        BorderThickness="1"/>
                
                <Button Content="{DynamicResource Loc.Button.DeleteDictButton}" 
                        MinWidth="130"
                        Command="{Binding DeleteDictionaryCommand}" 
                        Style="{StaticResource DangerButton}"
                        Visibility="{Binding IsEditable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>