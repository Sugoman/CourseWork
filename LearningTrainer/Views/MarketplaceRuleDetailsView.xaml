                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>


                <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <!-- Add Comment Form -->
