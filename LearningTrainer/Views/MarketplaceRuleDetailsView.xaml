                                            CommandParameter="{Binding}"
                                            Style="{StaticResource BaseButton}" 
                                            Margin="0,0,8,8" Padding="10,6">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Rating, Converter={StaticResource RatingToStars}}" 
                                                       Foreground="#F59E0B" FontSize="10" Margin="0,0,6,0"/>
