                            <TextBlock Text="âœ ÐžÑÑ‚Ð°Ð²Ð¸Ñ‚ÑŒ Ð¾Ñ‚Ð·Ñ‹Ð²" FontSize="14" FontWeight="Medium"
               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="ÐžÑ†ÐµÐ½ÐºÐ°:" VerticalAlignment="Center" Margin="0,0,10,0"
                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <ComboBox ItemsSource="{Binding RatingOptions}" 
                  SelectedValue="{Binding NewRating}"
